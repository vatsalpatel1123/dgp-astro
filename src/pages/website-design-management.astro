---
// website-design-management.astro - Updated with new color scheme and design
import '../css/main.css';
import Navigation from '../components/Navigation.astro';
import FooterBar from '../components/FooterBar.astro';
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Website Design & Management | Dentistry Growth Partners</title>
  <meta name="description" content="Custom, high-converting websites designed specifically for dental practices with ongoing management and optimization.">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tabler/icons-webfont@latest/tabler-icons.min.css">
  <link rel="icon" type="image/png" href="/636f4050ef41c9124a12cbba/dgp-logo1.png" />
  <link rel="shortcut icon" type="image/png" href="/636f4050ef41c9124a12cbba/dgp-logo1.png" />
  
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    :root {
      --primary-light: #EDEDE8;
      --primary-dark: #051023;
      --primary-blue: #07387D;
      --accent-blue: #248EEF;
      --white: #ffffff;
      --black: #1d1d1d;
      --grey: #f5f5f5;
      --dim-grey: #646464;
    }

    body {
      font-family: 'Inter', sans-serif;
      background: var(--white);
      color: var(--black);
      line-height: 1.6;
      overflow-x: hidden;
    }

    .section-container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 0 24px;
    }

    /* HERO SECTION */
    .hero-section {
      min-height: 85vh;
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
      overflow: hidden;
      padding: 160px 24px 100px;
    }

    .hero-background-overlay {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-image: url('https://images.unsplash.com/photo-1629909613654-28e377c37b09?w=1920&q=80');
      background-size: cover;
      background-position: center;
      z-index: 0;
    }

    .hero-background-overlay::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(135deg, rgba(5, 16, 35, 0.92) 0%, rgba(7, 56, 125, 0.88) 50%, rgba(36, 142, 239, 0.85) 100%);
      z-index: 1;
    }

    .hero-background-overlay::after {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-image: radial-gradient(circle, rgba(255, 255, 255, 0.05) 1px, transparent 1px);
      background-size: 30px 30px;
      z-index: 2;
    }

    .hero-container {
      max-width: 1100px;
      width: 100%;
      margin: 0 auto;
      position: relative;
      z-index: 10;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      text-align: center;
    }

    .hero-content {
      text-align: center;
      position: relative;
    }

    .hero-section h1 {
      font-size: clamp(42px, 5.5vw, 62px);
      font-weight: 800;
      color: #ffffff;
      line-height: 1.15;
      margin: 0 0 24px 0;
      letter-spacing: -1.8px;
      text-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
      position: relative;
    }

    .hero-subtitle {
      font-size: clamp(20px, 2.2vw, 24px);
      color: rgba(255, 255, 255, 0.95);
      line-height: 1.6;
      margin-bottom: 40px;
      font-weight: 600;
    }

    .hero-cta {
      display: inline-flex;
      align-items: center;
      gap: 12px;
      padding: 18px 42px;
      background: var(--accent-blue);
      color: var(--white);
      font-size: 17px;
      font-weight: 700;
      border-radius: 12px;
      text-decoration: none;
      transition: all 0.3s ease;
      border: 3px solid var(--accent-blue);
      box-shadow: 0 8px 24px rgba(36, 142, 239, 0.3);
    }

    .hero-cta:hover {
      background: transparent;
      color: var(--white);
      transform: translateY(-4px);
      box-shadow: 0 12px 32px rgba(36, 142, 239, 0.4);
    }

    .hero-cta i {
      font-size: 22px;
    }

    /* WHAT YOU GET SECTION */
    .what-you-get-section {
      padding: 120px 24px;
      background: var(--white);
    }

    .section-header {
      max-width: 900px;
      margin: 0 auto 60px;
      text-align: center;
    }

    .section-title {
      font-size: clamp(32px, 4vw, 48px);
      font-weight: 800;
      color: var(--primary-blue);
      margin-bottom: 20px;
      line-height: 1.2;
      letter-spacing: -1px;
    }

    .services-split {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 40px;
      max-width: 1200px;
      margin: 0 auto;
    }

    .service-column {
      background: var(--white);
      border: 3px solid var(--grey);
      border-radius: 24px;
      padding: 48px 40px;
      transition: all 0.4s ease;
    }

    .service-column:hover {
      transform: translateY(-8px);
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
      border-color: var(--accent-blue);
    }

    .service-column-header {
      display: flex;
      align-items: center;
      gap: 16px;
      margin-bottom: 32px;
    }

    .service-icon {
      width: 70px;
      height: 70px;
      background: linear-gradient(135deg, var(--primary-blue), var(--accent-blue));
      border-radius: 16px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 32px;
      color: var(--white);
    }

    .service-column h3 {
      font-size: 28px;
      font-weight: 800;
      color: var(--primary-blue);
      letter-spacing: -0.5px;
    }

    .service-list {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .service-list li {
      display: flex;
      align-items: flex-start;
      gap: 12px;
      padding: 12px 0;
      font-size: 16px;
      color: var(--dim-grey);
      line-height: 1.6;
    }

    .service-list li i {
      font-size: 20px;
      color: var(--primary-blue);
      flex-shrink: 0;
      margin-top: 2px;
    }

    /* WHY IT MATTERS SECTION */
    .why-it-matters-section {
      padding: 120px 24px;
      background: var(--primary-light);
      position: relative;
      overflow: hidden;
    }

    .why-it-matters-section::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-image: url('https://images.unsplash.com/photo-1606811971618-4486d14f3f99?w=1920&q=80');
      background-size: cover;
      background-position: center;
      opacity: 0.03;
      z-index: 0;
    }

    .why-it-matters-section .section-container {
      position: relative;
      z-index: 1;
    }

    .benefits-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 32px;
      max-width: 1300px;
      margin: 60px auto 0;
    }

    .benefit-card {
      background: var(--white);
      border: 3px solid var(--grey);
      border-radius: 24px;
      padding: 48px 36px;
      text-align: center;
      transition: all 0.4s ease;
      position: relative;
    }

    .benefit-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
      border-color: var(--accent-blue);
    }

    .benefit-icon {
      width: 80px;
      height: 80px;
      background: linear-gradient(135deg, var(--primary-blue), var(--accent-blue));
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 24px;
      font-size: 36px;
      color: var(--white);
    }

    .benefit-card h3 {
      font-size: 24px;
      font-weight: 800;
      color: var(--primary-blue);
      margin-bottom: 16px;
      letter-spacing: -0.5px;
    }

    .benefit-card p {
      font-size: 15px;
      color: var(--dim-grey);
      line-height: 1.7;
      margin: 0;
    }

    /* DESIGN EXAMPLES SECTION */
    .design-examples-section {
      padding: 120px 24px;
      background: var(--white);
    }

    .examples-note {
      max-width: 700px;
      margin: 0 auto 48px;
      text-align: center;
      font-size: 17px;
      color: var(--dim-grey);
      line-height: 1.7;
      font-style: italic;
    }

    .examples-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 40px;
      max-width: 1200px;
      margin: 0 auto;
    }

    .example-card {
      background: var(--white);
      border: 3px solid var(--grey);
      border-radius: 20px;
      overflow: hidden;
      transition: all 0.4s ease;
      position: relative;
    }

    .example-card:hover {
      border-color: var(--accent-blue);
      transform: translateY(-8px);
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
    }

    .example-image {
      width: 100%;
      height: 300px;
      background: linear-gradient(135deg, var(--grey), var(--primary-light));
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 48px;
      color: var(--primary-blue);
      position: relative;
      overflow: hidden;
    }

    .example-placeholder {
      position: relative;
      z-index: 1;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 12px;
    }

    .example-placeholder i {
      font-size: 64px;
      opacity: 0.3;
    }

    .example-placeholder span {
      font-size: 14px;
      font-weight: 600;
      opacity: 0.5;
    }

    .example-content {
      padding: 32px 28px;
    }

    .example-badge {
      display: inline-block;
      background: var(--primary-light);
      color: var(--primary-blue);
      padding: 6px 16px;
      border-radius: 20px;
      font-size: 12px;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      margin-bottom: 12px;
    }

    .example-content h3 {
      font-size: 22px;
      font-weight: 800;
      color: var(--primary-blue);
      margin-bottom: 12px;
      letter-spacing: -0.3px;
    }

    .example-content p {
      font-size: 15px;
      color: var(--dim-grey);
      line-height: 1.6;
      margin: 0;
    }

    /* PROCESS SECTION */
    .process-section {
      padding: 120px 24px;
      background: var(--primary-light);
    }

    .process-timeline {
      max-width: 900px;
      margin: 60px auto 0;
      position: relative;
    }

    .timeline-line {
      position: absolute;
      left: 35px;
      top: 40px;
      bottom: 40px;
      width: 3px;
      background: linear-gradient(180deg, var(--primary-blue), var(--accent-blue));
    }

    .timeline-item {
      display: flex;
      gap: 24px;
      margin-bottom: 48px;
      position: relative;
    }

    .timeline-item:last-child {
      margin-bottom: 0;
    }

    .timeline-number {
      width: 70px;
      height: 70px;
      background: linear-gradient(135deg, var(--primary-blue), var(--accent-blue));
      border: 4px solid var(--white);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 24px;
      font-weight: 800;
      color: var(--white);
      flex-shrink: 0;
      position: relative;
      z-index: 10;
    }

    .timeline-content {
      background: var(--white);
      border-radius: 16px;
      padding: 32px 28px;
      flex: 1;
      border: 3px solid transparent;
      transition: all 0.3s ease;
    }

    .timeline-item:hover .timeline-content {
      border-color: var(--accent-blue);
      transform: translateX(8px);
      box-shadow: 0 12px 32px rgba(0, 0, 0, 0.1);
    }

    .timeline-content h3 {
      font-size: 22px;
      font-weight: 800;
      color: var(--primary-blue);
      margin-bottom: 8px;
      letter-spacing: -0.3px;
    }

    .timeline-content p {
      font-size: 15px;
      color: var(--dim-grey);
      line-height: 1.7;
      margin: 0;
    }

    /* FINAL CTA SECTION */
    .final-cta-section {
      padding: 100px 24px;
      background: linear-gradient(135deg, var(--primary-blue) 0%, var(--accent-blue) 100%);
      position: relative;
      overflow: hidden;
    }

    .final-cta-section::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: url('data:image/svg+xml,<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg"><circle cx="50" cy="50" r="2" fill="rgba(255,255,255,0.1)"/></svg>') repeat;
      opacity: 0.3;
    }

    .final-cta-content {
      max-width: 900px;
      margin: 0 auto;
      text-align: center;
      position: relative;
      z-index: 10;
    }

    .final-cta-icon {
      width: 100px;
      height: 100px;
      background: rgba(255, 255, 255, 0.15);
      border: 3px solid var(--white);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 32px;
      font-size: 48px;
      color: var(--white);
    }

    .final-cta-section h2 {
      font-size: clamp(32px, 4vw, 48px);
      font-weight: 800;
      color: var(--white);
      margin-bottom: 24px;
      line-height: 1.2;
      letter-spacing: -1px;
    }

    .final-cta-text {
      font-size: 20px;
      color: rgba(255, 255, 255, 0.95);
      line-height: 1.7;
      margin-bottom: 40px;
      max-width: 800px;
      margin-left: auto;
      margin-right: auto;
    }

    .final-cta-button {
      display: inline-flex;
      align-items: center;
      gap: 12px;
      padding: 20px 48px;
      background: var(--white);
      color: var(--primary-blue);
      font-size: 18px;
      font-weight: 700;
      border-radius: 14px;
      text-decoration: none;
      transition: all 0.3s ease;
      border: 3px solid var(--white);
      box-shadow: 0 8px 24px rgba(255, 255, 255, 0.3);
    }

    .final-cta-button:hover {
      background: transparent;
      color: var(--white);
      transform: translateY(-4px);
      box-shadow: 0 12px 32px rgba(255, 255, 255, 0.4);
    }

    .final-cta-button i {
      font-size: 22px;
    }

    /* FLOATING CTA */
    .floating-cta {
      position: fixed;
      bottom: 32px;
      right: 32px;
      display: flex;
      flex-direction: column;
      gap: 16px;
      z-index: 1000;
    }

    .floating-btn {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 16px 24px;
      background: var(--primary-blue);
      color: var(--white);
      border-radius: 50px;
      text-decoration: none;
      font-weight: 700;
      font-size: 15px;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
      transition: all 0.3s ease;
    }

    .floating-btn:hover {
      transform: translateY(-4px);
      box-shadow: 0 12px 32px rgba(0, 0, 0, 0.3);
      background: var(--accent-blue);
    }

    /* RESPONSIVE */
    @media (max-width: 991px) {
      .hero-section {
        padding: 140px 24px 80px;
        min-height: 75vh;
      }

      .services-split, .examples-grid {
        grid-template-columns: 1fr;
        gap: 32px;
      }

      .benefits-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 24px;
      }

      .what-you-get-section, .why-it-matters-section, .design-examples-section, .process-section, .final-cta-section {
        padding: 80px 24px;
      }
    }

    @media (max-width: 767px) {
      .hero-section {
        padding: 130px 20px 60px;
        min-height: 70vh;
      }

      .hero-section h1 {
        font-size: clamp(32px, 7vw, 44px);
        margin-bottom: 20px;
      }

      .hero-subtitle {
        font-size: 18px;
      }

      .benefits-grid {
        grid-template-columns: 1fr;
        gap: 24px;
      }

      .service-column, .benefit-card {
        padding: 36px 28px;
      }

      .service-icon, .benefit-icon {
        width: 60px;
        height: 60px;
        font-size: 28px;
      }

      .timeline-line {
        left: 27px;
      }

      .timeline-number {
        width: 60px;
        height: 60px;
        font-size: 20px;
      }

      .timeline-content {
        padding: 24px 20px;
      }

      .final-cta-icon {
        width: 80px;
        height: 80px;
        font-size: 40px;
      }

      .final-cta-text {
        font-size: 17px;
      }

      .final-cta-button {
        padding: 18px 36px;
        font-size: 16px;
        width: 100%;
        justify-content: center;
      }

      .what-you-get-section, .why-it-matters-section, .design-examples-section, .process-section, .final-cta-section {
        padding: 60px 20px;
      }

      .floating-cta {
        bottom: 20px;
        right: 20px;
        gap: 12px;
      }

      .floating-btn {
        padding: 14px 20px;
        font-size: 14px;
      }

      .floating-btn span {
        display: none;
      }
    }

    @media (max-width: 479px) {
      .hero-section {
        padding: 120px 16px 50px;
      }

      .hero-section h1 {
        font-size: clamp(28px, 8vw, 38px);
      }

      .service-column h3, .benefit-card h3 {
        font-size: 20px;
      }

      .final-cta-section h2 {
        font-size: 28px;
      }
    }
  </style>
</head>
