      <i class="ti ti-calendar-event" style="font-size: 24px;"></i>
      <span>Let's Talk</span>
    </a>
    <a href="tel:+16505578269" class="floating-btn">
      <i class="ti ti-phone" style="font-size: 24px;"></i>
      <span>Call Now</span>
    </a>
  </div>

  <!-- ============================================
       JAVASCRIPT
  ============================================ -->
  <script>
    // Mobile menu toggle
    document.addEventListener('DOMContentLoaded', function() {
      const menuButton = document.querySelector('.navbar-menu-button');
      const menu = document.querySelector('.navbar-menu-dark');
      
      if (menuButton && menu) {
        menuButton.addEventListener('click', function() {
          menuButton.classList.toggle('w--open');
          menu.classList.toggle('w--open');
        });
      }

      // Close mobile menu when clicking a link
      const navLinks = document.querySelectorAll('.nav-link-dark');
      navLinks.forEach(link => {
        link.addEventListener('click', function() {
          if (window.innerWidth <= 991) {
            menuButton?.classList.remove('w--open');
            menu?.classList.remove('w--open');
          }
        });
      });

      // Smooth scroll for anchor links
      document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
          e.preventDefault();
          const target = document.querySelector(this.getAttribute('href'));
          if (target) {
            target.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          }
        });
      });
    });
  </script>

</body>
</html>