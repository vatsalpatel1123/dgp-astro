            </div>
            <div class="step-title">Qualification</div>
            <div class="step-description">Filter for high-value patients</div>
          </div>

          <!-- Step 4 -->
          <div class="journey-step">
            <div class="step-number">4</div>
            <div class="step-icon">
              <i class="ti ti-heart-handshake"></i>
            </div>
