// ai-voice-receptionist.astro - Updated
import '../css/main.css';
import Navigation from '../components/Navigation.astro';
import FooterBar from '../components/FooterBar.astro';
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>AI Voice Receptionist | Dentistry Growth Partners</title>
  <meta name="description" content="24/7 AI Voice Receptionist that answers calls, books appointments, and qualifies leads automatically—never miss another patient opportunity.">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tabler/icons-webfont@latest/tabler-icons.min.css">
  <link rel="icon" type="image/png" href="/636f4050ef41c9124a12cbba/dgp-logo1.png" />
  <link rel="shortcut icon" type="image/png" href="/636f4050ef41c9124a12cbba/dgp-logo1.png" />
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    :root {
      --primary-light: #EDEDE8;
      --primary-dark: #051023;
      --primary-blue: #07387D;
      --accent-blue: #248EEF;
      --white: #ffffff;
      --black: #1d1d1d;
      --grey: #f5f5f5;
      --dim-grey: #646464;
    }

    body {
      font-family: 'Inter', sans-serif;
      background: var(--white);
      color: var(--black);
      line-height: 1.6;
      overflow-x: hidden;
    }

    .section-container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 0 24px;
    }

    /* HERO SECTION */
    .hero-section {
      min-height: 85vh;
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
      overflow: hidden;
      background: linear-gradient(135deg, var(--primary-dark) 0%, var(--primary-blue) 50%, var(--accent-blue) 100%);
      padding: 160px 24px 100px;
    }

    .hero-background-overlay {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-image: url('https://images.unsplash.com/photo-1576091160550-2173dba999ef?w=1920&q=80');
      background-size: cover;
      background-position: center;
      opacity: 0.12;
      z-index: 0;
    }

    .hero-container {
      max-width: 1100px;
      width: 100%;
      margin: 0 auto;
      position: relative;
      z-index: 10;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      text-align: center;
    }

    .hero-section h1 {
      font-size: clamp(42px, 5.5vw, 68px);
      font-weight: 800;
      color: #ffffff;
      line-height: 1.2;
      margin: 0 auto 24px;
      letter-spacing: -1.8px;
      text-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
      max-width: 1000px;
      padding: 0 20px;
    }

    .hero-subtitle {
      font-size: clamp(18px, 2vw, 22px);
      color: rgba(255, 255, 255, 0.95);
      line-height: 1.7;
      margin-bottom: 48px;
      max-width: 900px;
    }

    .hero-stats {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 32px;
      margin-bottom: 24px;
      flex-wrap: wrap;
    }

    .hero-stat {
      display: flex;
      align-items: center;
      gap: 16px;
      background: rgba(255, 255, 255, 0.08);
      backdrop-filter: blur(10px);
      border: 2px solid rgba(36, 142, 239, 0.3);
      padding: 20px 32px;
      border-radius: 16px;
      transition: all 0.3s ease;
    }

    .hero-stat:hover {
      background: rgba(255, 255, 255, 0.12);
      border-color: rgba(36, 142, 239, 0.5);
      transform: translateY(-4px);
    }

    .stat-icon {
      width: 48px;
      height: 48px;
      background: var(--accent-blue);
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 24px;
      color: var(--white);
    }

    .stat-label {
      font-size: 14px;
      color: rgba(255, 255, 255, 0.95);
      font-weight: 600;
      line-height: 1.3;
    }

    /* CAPABILITIES SECTION */
    .capabilities-section {
      padding: 120px 24px;
      background: var(--white);
    }

    .section-header {
      max-width: 800px;
      margin: 0 auto 60px;
      text-align: center;
    }

    .section-title {
      font-size: clamp(32px, 4vw, 48px);
      font-weight: 800;
      color: var(--primary-blue);
      margin-bottom: 16px;
      line-height: 1.2;
      letter-spacing: -1px;
    }

    .capabilities-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 32px;
      max-width: 1300px;
      margin: 0 auto;
    }

    .capability-card {
      background: var(--white);
      border: 3px solid var(--grey);
      border-radius: 20px;
      padding: 40px 32px;
      transition: all 0.4s ease;
      position: relative;
      overflow: hidden;
    }

    .capability-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(135deg, transparent 0%, rgba(36, 142, 239, 0.05) 100%);
      opacity: 0;
      transition: opacity 0.4s ease;
    }

    .capability-card:hover {
      border-color: var(--accent-blue);
      transform: translateY(-8px);
      box-shadow: 0 16px 48px rgba(0, 0, 0, 0.12);
    }

    .capability-card:hover::before {
      opacity: 1;
    }

    .capability-icon {
      width: 70px;
      height: 70px;
      background: linear-gradient(135deg, var(--primary-blue), var(--accent-blue));
      border-radius: 16px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 32px;
      color: var(--white);
      margin-bottom: 24px;
      transition: all 0.4s ease;
    }

    .capability-card:hover .capability-icon {
      transform: scale(1.1) rotate(5deg);
    }

    .capability-card h3 {
      font-size: 22px;
      font-weight: 800;
      color: var(--primary-blue);
      margin-bottom: 12px;
      letter-spacing: -0.3px;
    }

    .capability-card p {
      font-size: 15px;
      color: var(--dim-grey);
      line-height: 1.7;
      margin: 0;
    }

    /* DEMO CTA SECTION */
    .demo-cta-section {
      padding: 80px 24px;
      background: var(--primary-light);
    }

    .demo-cta-container {
      max-width: 900px;
      margin: 0 auto;
      text-align: center;
      background: var(--white);
      border: 3px solid var(--accent-blue);
      border-radius: 24px;
      padding: 60px 40px;
      position: relative;
      overflow: hidden;
    }

    .demo-icon {
      width: 90px;
      height: 90px;
      background: linear-gradient(135deg, var(--primary-blue), var(--accent-blue));
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 28px;
      font-size: 40px;
      color: var(--white);
    }

    .demo-cta-container h2 {
      font-size: clamp(28px, 3.5vw, 42px);
      font-weight: 800;
      color: var(--primary-blue);
      margin-bottom: 16px;
      line-height: 1.2;
      letter-spacing: -1px;
    }

    .demo-cta-container p {
      font-size: 18px;
      color: var(--dim-grey);
      line-height: 1.6;
      margin-bottom: 32px;
      max-width: 700px;
      margin-left: auto;
      margin-right: auto;
    }

    .demo-cta-button {
      display: inline-flex;
      align-items: center;
      gap: 12px;
      padding: 20px 48px;
      background: var(--accent-blue);
      color: var(--white);
      font-size: 18px;
      font-weight: 700;
      border-radius: 14px;
      text-decoration: none;
      transition: all 0.3s ease;
      border: 3px solid var(--accent-blue);
      box-shadow: 0 8px 24px rgba(36, 142, 239, 0.3);
    }

    .demo-cta-button:hover {
      background: var(--primary-blue);
      border-color: var(--primary-blue);
      transform: translateY(-4px);
      box-shadow: 0 12px 32px rgba(7, 56, 125, 0.4);
    }

    .demo-cta-button i {
      font-size: 22px;
    }

    /* BENEFITS SECTION */
    .benefits-section {
      padding: 120px 24px;
      background: var(--white);
    }

    .benefits-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 40px;
      max-width: 1200px;
      margin: 60px auto 0;
    }

    .benefit-card {
      background: var(--white);
      border: 3px solid var(--grey);
      border-radius: 24px;
      padding: 48px 40px;
      transition: all 0.4s ease;
    }

    .benefit-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
      border-color: var(--accent-blue);
    }

    .benefit-badge {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      background: linear-gradient(135deg, var(--primary-blue), var(--accent-blue));
      color: var(--white);
      padding: 10px 20px;
      border-radius: 50px;
      font-size: 13px;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      margin-bottom: 24px;
    }

    .benefit-badge i {
      font-size: 16px;
    }

    .benefit-card h3 {
      font-size: 28px;
      font-weight: 800;
      color: var(--primary-blue);
      margin-bottom: 20px;
      letter-spacing: -0.5px;
    }

    .benefit-card p {
      font-size: 16px;
      color: var(--dim-grey);
      line-height: 1.7;
      margin: 0;
    }

    /* FINAL CTA */
    .final-cta-section {
      padding: 100px 24px;
      background: linear-gradient(135deg, var(--primary-blue) 0%, var(--accent-blue) 100%);
      position: relative;
      overflow: hidden;
    }

    .final-cta-content {
      max-width: 900px;
      margin: 0 auto;
      text-align: center;
      position: relative;
      z-index: 10;
    }

    .final-cta-icon {
      width: 100px;
      height: 100px;
      background: rgba(255, 255, 255, 0.15);
      border: 3px solid var(--white);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 32px;
      font-size: 48px;
      color: var(--white);
    }

    .final-cta-section h2 {
      font-size: clamp(32px, 4vw, 48px);
      font-weight: 800;
      color: var(--white);
      margin-bottom: 24px;
      line-height: 1.2;
      letter-spacing: -1px;
    }

    .final-cta-text {
      font-size: 20px;
      color: rgba(255, 255, 255, 0.95);
      line-height: 1.7;
      margin-bottom: 40px;
      max-width: 800px;
      margin-left: auto;
      margin-right: auto;
    }

    .final-cta-button {
      display: inline-flex;
      align-items: center;
      gap: 12px;
      padding: 20px 48px;
      background: var(--white);
      color: var(--primary-blue);
      font-size: 18px;
      font-weight: 700;
      border-radius: 14px;
      text-decoration: none;
      transition: all 0.3s ease;
      border: 3px solid var(--white);
      box-shadow: 0 8px 24px rgba(255, 255, 255, 0.3);
    }

    .final-cta-button:hover {
      background: transparent;
      color: var(--white);
      transform: translateY(-4px);
      box-shadow: 0 12px 32px rgba(255, 255, 255, 0.4);
    }

    .final-cta-button i {
      font-size: 22px;
    }

    /* FLOATING CTA */
    .floating-cta {
      position: fixed;
      bottom: 32px;
      right: 32px;
      display: flex;
      flex-direction: column;
      gap: 16px;
      z-index: 1000;
    }

    .floating-btn {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 16px 24px;
      background: var(--primary-blue);
      color: var(--white);
      border-radius: 50px;
      text-decoration: none;
      font-weight: 700;
      font-size: 15px;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
      transition: all 0.3s ease;
    }

    .floating-btn:hover {
      transform: translateY(-4px);
      box-shadow: 0 12px 32px rgba(0, 0, 0, 0.3);
      background: var(--accent-blue);
    }

    /* RESPONSIVE */
    @media (max-width: 991px) {
      .hero-section {
        padding: 140px 24px 80px;
        min-height: 75vh;
      }

      .capabilities-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 24px;
      }

      .benefits-grid {
        grid-template-columns: 1fr;
        gap: 32px;
      }

      .capabilities-section, .benefits-section, .final-cta-section, .demo-cta-section {
        padding: 80px 24px;
      }
    }

    @media (max-width: 767px) {
      .hero-section {
        padding: 130px 20px 60px;
        min-height: 70vh;
      }

      .hero-section h1 {
        font-size: clamp(32px, 7vw, 44px);
        margin-bottom: 20px;
      }

      .hero-subtitle {
        font-size: 18px;
      }

      .hero-stats {
        gap: 20px;
      }

      .hero-stat {
        padding: 16px 24px;
      }

      .stat-icon {
        width: 40px;
        height: 40px;
        font-size: 20px;
      }

      .stat-label {
        font-size: 13px;
      }

      .capabilities-grid {
        grid-template-columns: 1fr;
        gap: 20px;
      }

      .capability-card {
        padding: 32px 24px;
      }

      .capability-icon {
        width: 60px;
        height: 60px;
        font-size: 28px;
      }

      .benefit-card {
        padding: 36px 28px;
      }

      .benefit-card h3 {
        font-size: 24px;
      }

      .demo-cta-container {
        padding: 48px 32px;
      }

      .demo-icon {
        width: 80px;
        height: 80px;
        font-size: 36px;
      }

      .final-cta-icon {
        width: 80px;
        height: 80px;
        font-size: 40px;
      }

      .final-cta-text {
        font-size: 17px;
      }

      .final-cta-button, .demo-cta-button {
        padding: 18px 36px;
        font-size: 16px;
        width: 100%;
        justify-content: center;
      }

      .capabilities-section, .benefits-section, .final-cta-section, .demo-cta-section {
        padding: 60px 20px;
      }

      .floating-cta {
        bottom: 20px;
        right: 20px;
        gap: 12px;
      }

      .floating-btn {
        padding: 14px 20px;
        font-size: 14px;
      }

      .floating-btn span {
        display: none;
      }
    }

    @media (max-width: 479px) {
      .hero-section {
        padding: 120px 16px 50px;
      }

      .hero-section h1 {
        font-size: clamp(28px, 8vw, 38px);
      }

      .hero-stats {
        flex-direction: column;
        gap: 16px;
      }

      .hero-stat {
        width: 100%;
        max-width: 300px;
        justify-content: center;
        padding: 14px 20px;
      }

      .capability-card h3 {
        font-size: 20px;
      }

      .benefit-card h3 {
        font-size: 22px;
      }

      .final-cta-section h2 {
        font-size: 28px;
      }

      .demo-cta-container {
        padding: 40px 24px;
      }
    }
  </style>
</head>
<body>
  <Navigation />
  
  <!-- HERO SECTION -->
  <section class="hero-section">
    <div class="hero-background-overlay"></div>

    <div class="hero-container">
      <h1>Never Miss a Call Again</h1>

      <p class="hero-subtitle">
        24/7 AI Voice Receptionist that answers calls, books appointments, and qualifies leads 
        automatically—ensuring you never lose another patient opportunity.
      </p>

      <!-- <div class="hero-stats">
        <div class="hero-stat">
          <div class="stat-icon">
            <i class="ti ti-clock-24"></i>
          </div>
          <div class="stat-content">
            <span class="stat-label">24/7 Availability</span>
          </div>
        </div>
        <div class="hero-stat">
          <div class="stat-icon">
            <i class="ti ti-bolt"></i>
          </div>
