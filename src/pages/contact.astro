---
// contact.astro
import '../css/main.css';
import Navigation from '../components/Navigation.astro';
import FooterBar from '../components/FooterBar.astro';
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Contact Us | Dentistry Growth Partners</title>
  <meta name="description" content="Get in touch with Dentistry Growth Partners. Book a demo, send us a message, or call us directly. We'll respond within one business day.">
  <!-- Favicon -->
  <link rel="icon" type="image/png" href="/636f4050ef41c9124a12cbba/dgp-logo1.png" />
  <link rel="shortcut icon" type="image/png" href="/636f4050ef41c9124a12cbba/dgp-logo1.png" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tabler/icons-webfont@latest/tabler-icons.min.css">
  
  <style>
    /* ============================================
       RESET & BASE STYLES
    ============================================ */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    :root {
      --dark-slate-blue: #083981;
      --natural: #c6ff53;
      --white: #ffffff;
      --black: #1d1d1d;
      --grey: #f5f5f5;
      --dim-grey: #646464;
      --dark-olive-green: #194c8b;
      --green: #2b6648;
      --pale-goldenrod: #e3fcb0;
      --indian-red: #db5656;
      --misty-rose: #ffe4d4;
      --silver: #c5c5c5;
    }

    body {
      font-family: 'Inter', sans-serif;
      background: var(--white);
      color: var(--black);
      line-height: 1.6;
      overflow-x: hidden;
    }

    .section-container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 0 24px;
    }

    /* ============================================
       HERO SECTION
    ============================================ */
    .hero-section {
      min-height: 75vh;
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
      overflow: hidden;
      background: linear-gradient(135deg, #1e3a5f 0%, #0a4d9e 50%, #2b6648 100%);
      padding: 140px 24px 80px;
      margin-top: 0;
    }

    /* Animated grid background */
    .hero-section .hero-background {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      overflow: hidden;
      opacity: 0.15;
      z-index: 0;
    }

    .hero-section .hero-background::before {
      content: '';
      position: absolute;
      width: 100%;
      height: 100%;
      background-image:
        linear-gradient(rgba(198, 255, 83, 0.1) 2px, transparent 2px),
        linear-gradient(90deg, rgba(198, 255, 83, 0.1) 2px, transparent 2px);
      background-size: 60px 60px;
      animation: gridMove 20s linear infinite;
    }

    @keyframes gridMove {
      0% {
        transform: translate(0, 0);
      }
      100% {
        transform: translate(60px, 60px);
      }
    }

    .hero-section .hero-shapes {
      position: absolute;
      width: 100%;
      height: 100%;
      top: 0;
      left: 0;
    }

    .hero-section .shape {
      position: absolute;
      filter: blur(100px);
      opacity: 0.3;
      will-change: transform;
      pointer-events: none;
    }

    .hero-section .shape-1 {
      width: 500px;
      height: 500px;
      background: radial-gradient(circle, rgba(198, 255, 83, 0.4) 0%, transparent 70%);
      top: -150px;
      right: -150px;
      animation: floatSlow 18s infinite ease-in-out;
    }

    .hero-section .shape-2 {
      width: 400px;
      height: 400px;
      background: radial-gradient(circle, rgba(198, 255, 83, 0.3) 0%, transparent 70%);
      bottom: -200px;
      left: -200px;
      animation: floatSlow 22s infinite ease-in-out reverse;
    }

    .hero-section .shape-3 {
      width: 350px;
      height: 350px;
      background: radial-gradient(circle, rgba(255, 255, 255, 0.2) 0%, transparent 70%);
      top: 20%;
      left: 50%;
      transform: translateX(-50%);
      animation: floatSlow 25s infinite ease-in-out;
    }

    @keyframes floatSlow {
      0%, 100% {
        transform: translate(0, 0) scale(1);
      }
      33% {
        transform: translate(40px, -40px) scale(1.1);
      }
      66% {
        transform: translate(-30px, 30px) scale(0.95);
      }
    }

    .hero-section .hero-container {
      max-width: 1000px;
      width: 100%;
      margin: 0 auto;
      position: relative;
      z-index: 10;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      text-align: center;
    }

    .hero-section .hero-badge {
      display: inline-flex;
      align-items: center;
      gap: 10px;
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border: 2px solid rgba(198, 255, 83, 0.3);
      padding: 12px 28px;
      border-radius: 50px;
      color: var(--white);
      font-size: 15px;
      font-weight: 700;
      margin-bottom: 32px;
      transition: all 0.3s ease;
    }

    .hero-section .hero-badge i {
      font-size: 20px;
      color: var(--natural);
    }

    .hero-section h1 {
      font-size: clamp(40px, 5.5vw, 68px);
      font-weight: 800;
      color: #ffffff;
      line-height: 1.2;
      margin: 0 auto 24px;
      letter-spacing: -1.8px;
      text-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
      max-width: 1000px;
      padding: 0 20px;
    }

    .hero-section .highlight-animated {
      color: var(--natural);
      position: relative;
      display: inline-block;
      background: linear-gradient(135deg, #c6ff53 0%, #d4ff8d 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .hero-section .highlight-animated::after {
      content: '';
      position: absolute;
      bottom: -4px;
      left: 0;
      right: 0;
      height: 8px;
      background: #c6ff53;
      opacity: 0.3;
      border-radius: 4px;
      transform: scaleX(0);
      animation: underlineGrow 0.8s ease-out 0.3s forwards;
    }

    @keyframes underlineGrow {
      to {
        transform: scaleX(1);
      }
    }

    .hero-section .hero-subtitle {
      font-size: clamp(18px, 2.2vw, 22px);
      color: rgba(255, 255, 255, 0.95);
      line-height: 1.6;
      margin-bottom: 48px;
      max-width: 800px;
      margin-left: auto;
      margin-right: auto;
    }

    .contact-info-bar {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 48px;
      flex-wrap: wrap;
    }

    .contact-info-item {
      display: flex;
      align-items: center;
      gap: 16px;
      background: rgba(255, 255, 255, 0.08);
      backdrop-filter: blur(10px);
      border: 2px solid rgba(198, 255, 83, 0.2);
      padding: 20px 32px;
      border-radius: 16px;
      transition: all 0.3s ease;
    }

    .contact-info-item:hover {
      background: rgba(255, 255, 255, 0.12);
      border-color: rgba(198, 255, 83, 0.4);
      transform: translateY(-4px);
    }

    .contact-icon {
      width: 48px;
      height: 48px;
      background: linear-gradient(135deg, var(--natural), #d4ff8d);
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;
    }

    .contact-icon i {
      font-size: 24px;
      color: var(--dark-slate-blue);
    }

    .contact-info-item a {
      color: var(--white);
      text-decoration: none;
      font-size: 16px;
      font-weight: 600;
      transition: color 0.3s ease;
    }

    .contact-info-item a:hover {
      color: var(--natural);
    }

    /* ============================================
       MAIN CONTACT SECTION
    ============================================ */
    .contact-section {
      padding: 120px 24px;
      background: var(--white);
    }

    .section-header {
      max-width: 800px;
      margin: 0 auto 60px;
      text-align: center;
    }

    .section-tag {
      display: inline-flex;
      align-items: center;
      gap: 10px;
      background: var(--pale-goldenrod);
      color: var(--dark-olive-green);
      padding: 10px 24px;
      border-radius: 50px;
      font-size: 14px;
      font-weight: 700;
      margin-bottom: 20px;
    }

    .section-tag i {
      font-size: 18px;
    }

    .section-title {
      font-size: clamp(32px, 4vw, 48px);
      font-weight: 800;
      color: var(--dark-slate-blue);
      margin-bottom: 16px;
      line-height: 1.2;
      letter-spacing: -1px;
    }

    .section-description {
      font-size: 18px;
      color: var(--dim-grey);
      line-height: 1.7;
    }

    .contact-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 48px;
      max-width: 1400px;
      margin: 0 auto;
    }

    /* Calendar Section */
    .calendar-section {
      background: var(--white);
      border: 3px solid var(--grey);
      border-radius: 24px;
      padding: 40px;
      transition: all 0.4s ease;
    }

    .calendar-section:hover {
      border-color: var(--natural);
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
    }

    .calendar-section h3 {
      font-size: 28px;
      font-weight: 800;
      color: var(--dark-slate-blue);
      margin-bottom: 16px;
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .calendar-section h3 i {
      font-size: 32px;
      color: var(--natural);
    }

    .calendar-description {
      font-size: 16px;
      color: var(--dim-grey);
      margin-bottom: 30px;
      line-height: 1.7;
    }

    .calendar-embed {
      width: 100%;
      min-height: 700px;
      border: none;
      border-radius: 12px;
      background: var(--grey);
    }

    /* Form Section */
    .form-section {
      background: var(--white);
      border: 3px solid var(--grey);
      border-radius: 24px;
      padding: 40px;
      transition: all 0.4s ease;
    }

    .form-section:hover {
      border-color: var(--natural);
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
    }

    .form-section h3 {
      font-size: 28px;
      font-weight: 800;
      color: var(--dark-slate-blue);
      margin-bottom: 16px;
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .form-section h3 i {
      font-size: 32px;
      color: var(--natural);
    }

    .form-description {
      font-size: 16px;
      color: var(--dim-grey);
      margin-bottom: 30px;
      line-height: 1.7;
    }

    .contact-form {
      display: flex;
      flex-direction: column;
      gap: 24px;
    }

    .form-group {
      display: flex;
      flex-direction: column;
      gap: 8px;
    }

    .form-group label {
      font-size: 15px;
      font-weight: 600;
      color: var(--black);
    }

    .form-required {
      color: var(--indian-red);
      margin-left: 4px;
    }

    .form-group input,
    .form-group textarea {
      padding: 16px;
      border: 2px solid var(--silver);
      border-radius: 12px;
      font-size: 16px;
      font-family: inherit;
      transition: all 0.3s ease;
      background: var(--white);
    }

    .form-group input:focus,
    .form-group textarea:focus {
      outline: none;
      border-color: var(--natural);
      box-shadow: 0 0 0 3px rgba(198, 255, 83, 0.2);
    }

    .form-group textarea {
      min-height: 150px;
      resize: vertical;
    }

    .submit-btn {
      background: var(--natural);
      color: var(--dark-slate-blue);
      padding: 18px 40px;
      border-radius: 12px;
      font-weight: 700;
      font-size: 17px;
      transition: all 0.3s ease;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      border: 3px solid var(--natural);
      box-shadow: 0 4px 16px rgba(198, 255, 83, 0.3);
      cursor: pointer;
    }

    .submit-btn:hover:not(:disabled) {
      background: var(--dark-slate-blue);
      border-color: var(--dark-slate-blue);
      color: var(--natural);
      transform: translateY(-3px);
      box-shadow: 0 6px 24px rgba(8, 57, 129, 0.4);
    }

    .submit-btn:disabled {
      opacity: 0.6;
      cursor: not-allowed;
    }

    .form-message {
      padding: 16px;
      border-radius: 12px;
      font-size: 15px;
      font-weight: 600;
      text-align: center;
      display: none;
    }

    .form-message.success {
      background: var(--pale-goldenrod);
      color: var(--green);
      display: block;
    }

    .form-message.error {
      background: var(--misty-rose);
      color: var(--indian-red);
      display: block;
    }

    /* ============================================
       INFO CARDS SECTION
    ============================================ */
    .info-cards-section {
      padding: 120px 24px;
      background: var(--grey);
    }

    .info-cards {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 32px;
      max-width: 1300px;
      margin: 0 auto;
    }

    .info-card {
      background: var(--white);
      border: 3px solid transparent;
      border-radius: 24px;
      padding: 48px 36px;
      text-align: center;
      transition: all 0.4s ease;
      position: relative;
    }

    .info-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
      border-color: var(--natural);
    }

    .info-card-icon {
      width: 80px;
      height: 80px;
      background: linear-gradient(135deg, var(--dark-slate-blue), var(--dark-olive-green));
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 24px;
    }

    .info-card-icon i {
      font-size: 36px;
      color: var(--natural);
    }

    .info-card h3 {
      font-size: 24px;
      font-weight: 800;
      color: var(--dark-slate-blue);
      margin-bottom: 16px;
      letter-spacing: -0.5px;
    }

    .info-card p {
      color: var(--dim-grey);
      line-height: 1.7;
      font-size: 15px;
      margin-bottom: 20px;
    }

    .info-card a {
      color: var(--dark-slate-blue);
      font-weight: 700;
      text-decoration: none;
      transition: color 0.3s ease;
      display: inline-flex;
      align-items: center;
      gap: 6px;
    }

    .info-card a:hover {
      color: var(--green);
    }

    .info-card a i {
      font-size: 16px;
    }

    /* ============================================
       FLOATING CTA BUTTONS
    ============================================ */
    .floating-cta {
      position: fixed;
      bottom: 32px;
      right: 32px;
      display: flex;
      flex-direction: column;
      gap: 16px;
      z-index: 1000;
    }

    .floating-btn {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 16px 24px;
      background: var(--natural);
      color: var(--dark-slate-blue);
      border-radius: 50px;
      text-decoration: none;
      font-weight: 700;
      font-size: 15px;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
      transition: all 0.3s ease;
    }

    .floating-btn:hover {
      transform: translateY(-4px);
      box-shadow: 0 12px 32px rgba(0, 0, 0, 0.3);
      background: var(--dark-slate-blue);
      color: var(--natural);
    }

    /* ============================================
       RESPONSIVE DESIGN
    ============================================ */
    @media (max-width: 991px) {
      .hero-section {
        padding: 130px 24px 80px;
        min-height: 70vh;
      }

      .hero-section .shape-1,
      .hero-section .shape-2,
      .hero-section .shape-3 {
        filter: blur(70px);
      }

      .contact-grid {
        grid-template-columns: 1fr;
        gap: 40px;
      }

      .info-cards {
        grid-template-columns: repeat(2, 1fr);
        gap: 24px;
      }

      .calendar-embed {
        min-height: 600px;
      }

      .contact-section,
      .info-cards-section {
        padding: 80px 24px;
      }
    }

    @media (max-width: 767px) {
      .hero-section {
        padding: 120px 20px 60px;
        min-height: auto;
      }

      .hero-section h1 {
        font-size: clamp(32px, 7vw, 44px);
        margin-bottom: 20px;
        padding: 0 10px;
      }

      .hero-section .hero-subtitle {
        font-size: 18px;
        margin-bottom: 40px;
      }

      .contact-info-bar {
        flex-direction: column;
        gap: 20px;
        width: 100%;
      }

      .contact-info-item {
        width: 100%;
        max-width: 400px;
        justify-content: center;
      }

      .calendar-section,
      .form-section {
        padding: 32px 24px;
      }

      .info-cards {
        grid-template-columns: 1fr;
        gap: 24px;
      }

      .calendar-embed {
        min-height: 500px;
      }

      .contact-section,
      .info-cards-section {
        padding: 60px 20px;
      }

      .floating-cta {
        bottom: 20px;
        right: 20px;
        gap: 12px;
      }

      .floating-btn {
        padding: 14px 20px;
        font-size: 14px;
      }

      .floating-btn span {
        display: none;
      }
    }

    @media (max-width: 479px) {
      .hero-section {
        padding: 110px 16px 50px;
      }

      .hero-section h1 {
        font-size: clamp(28px, 8vw, 38px);
        padding: 0 5px;
      }

      .hero-section .hero-subtitle {
        font-size: 16px;
      }

      .hero-section .hero-badge {
        padding: 10px 20px;
        font-size: 13px;
      }

      .contact-info-item {
        padding: 16px 24px;
      }

      .calendar-section,
      .form-section {
        padding: 28px 20px;
      }
    }
  </style>
</head>
<body>
  <Navigation />
  
  <!-- ============================================
       HERO SECTION
  ============================================ -->
  <section class="hero-section">
    <div class="hero-background">
      <div class="hero-shapes">
        <div class="shape shape-1"></div>
        <div class="shape shape-2"></div>
        <div class="shape shape-3"></div>
      </div>
    </div>

    <div class="hero-container">
      <div class="hero-badge" data-aos="fade-up">
        <i class="ti ti-mail"></i>
        <span>Get In Touch</span>
      </div>

      <h1 data-aos="fade-up" data-aos-delay="100">
        Let's <span class="highlight-animated">Transform</span> Your Practice
      </h1>

      <p class="hero-subtitle" data-aos="fade-up" data-aos-delay="200">
        Pick a time or send us a quick message — we'll respond within one business day.
      </p>

      <div class="contact-info-bar" data-aos="fade-up" data-aos-delay="300">
        <div class="contact-info-item">
          <div class="contact-icon">
            <i class="ti ti-phone"></i>
          </div>
          <a href="tel:+16505578269">(650) 557-8269</a>
        </div>
        <div class="contact-info-item">
          <div class="contact-icon">
            <i class="ti ti-mail"></i>
          </div>
          <a href="mailto:support@dentistrygrowthpartners.com">support@dentistrygrowthpartners.com</a>
        </div>
      </div>
    </div>
  </section>

  <!-- ============================================
       MAIN CONTACT SECTION
  ============================================ -->
  <section class="contact-section">
    <div class="section-container">
      <div class="section-header">
        <span class="section-tag">
          <i class="ti ti-messages"></i>
          Choose Your Method
        </span>
        <h2 class="section-title">Choose Your Preferred Way to Connect</h2>
        <p class="section-description">
          Book a time directly on our calendar for a personalized demo, or send us a message 
          and we'll get back to you within one business day.
        </p>
      </div>

      <div class="contact-grid">
        
        <!-- Calendar Section -->
        <div class="calendar-section">
          <h3>
            <i class="ti ti-calendar-event"></i>
            Book a Demo Call
          </h3>
          <p class="calendar-description">
            Schedule a 30-minute demo to see how our complete automated system can transform 
            your patient acquisition. Pick a time that works best for you.
          </p>
          <!-- GHL Booking Widget -->
          <iframe
            src="https://api.leadconnectorhq.com/widget/bookings/discovery-call-dgp"
            class="calendar-embed"
            title="Book a Demo Call"
            allow="payment"
            scrolling="yes"
          ></iframe>
        </div>

        <!-- Contact Form Section -->
        <div class="form-section">
          <h3>
            <i class="ti ti-message-circle"></i>
            Send Us a Message
          </h3>
          <p class="form-description">
            Prefer to write? Fill out the form below and we'll get back to you within one 
            business day with answers to your questions.
          </p>
          
          <div id="formMessage" class="form-message"></div>
          
          <form id="contactForm" class="contact-form">
            <div class="form-group">
              <label for="name">Your Name <span class="form-required">*</span></label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                required 
                placeholder="Dr. John Smith"
              />
            </div>

            <div class="form-group">
              <label for="practice">Practice Name <span class="form-required">*</span></label>
              <input 
                type="text" 
                id="practice" 
                name="practice" 
                required 
                placeholder="Smith Family Dentistry"
              />
            </div>

            <div class="form-group">
              <label for="email">Email Address <span class="form-required">*</span></label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required 
                placeholder="dr.smith@example.com"
              />
            </div>

            <div class="form-group">
              <label for="phone">Phone Number <span class="form-required">*</span></label>
              <input 
                type="tel" 
                id="phone" 
                name="phone" 
                required 
                placeholder="(555) 123-4567"
              />
            </div>

            <div class="form-group">
              <label for="message">Message <span class="form-required">*</span></label>
              <textarea 
                id="message" 
                name="message" 
                required 
                placeholder="Tell us about your practice and what you're looking to achieve..."
              ></textarea>
            </div>

            <button type="submit" class="submit-btn" id="submitBtn">
              <span>Send Message</span>
              <i class="ti ti-send"></i>
            </button>
          </form>
