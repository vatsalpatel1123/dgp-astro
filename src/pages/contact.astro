---
// Import components here
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import StickyCTA from '../components/StickyCTA.astro';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Contact Us | Dentistry Growth Partners</title>
    <meta
      name="description"
      content="Get in touch with Dentistry Growth Partners. Book a demo, send us a message, or call us directly. We'll respond within one business day."
    />
        <!-- Tabler Icons CDN -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tabler/icons-webfont@latest/tabler-icons.min.css">
    <style>
      :root {
        --black: #1d1d1d;
        --dim-grey: #646464;
        --dark-olive-green: #194c8b;
        --white: white;
        --dark-slate-blue: #083981;
        --natural: #c6ff53;
        --grey: whitesmoke;
        --green: #2b6648;
        --orange: #eb742e;
        --dark-grey: #9f9f9f;
        --misty-rose: #ffe4d4;
        --pale-goldenrod: #e3fcb0;
        --indian-red: #db5656;
        --blue: #474bc5;
        --silver: #c5c5c5;
        --honeydew: #e7fff3;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        color: var(--black);
        line-height: 1.6;
        overflow-x: hidden;
      }

      /* Hero Section */
      .hero-section {
        background: linear-gradient(135deg, var(--dark-slate-blue) 0%, var(--dark-olive-green) 100%);
        padding: 140px 24px 80px;
        position: relative;
        overflow: hidden;
        text-align: center;
      }

      .hero-section::before {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        width: 50%;
        height: 100%;
        background: url('data:image/svg+xml,<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg"><circle cx="50" cy="50" r="2" fill="rgba(198,255,83,0.1)"/></svg>') repeat;
        opacity: 0.3;
      }

      .hero-container {
        max-width: 900px;
        margin: 0 auto;
        position: relative;
        z-index: 1;
      }

      .hero-container h1 {
        font-size: 58px;
        font-weight: 800;
        color: var(--white);
        line-height: 1.1;
        margin-bottom: 24px;
        letter-spacing: -1.5px;
      }

      .hero-container .highlight {
        color: var(--natural);
      }

      .hero-container p {
        font-size: 22px;
        color: rgba(255,255,255,0.9);
        line-height: 1.7;
        margin-bottom: 20px;
      }

      .contact-info-bar {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 48px;
        margin-top: 40px;
        flex-wrap: wrap;
      }

      .contact-info-item {
        display: flex;
        align-items: center;
        gap: 12px;
        color: var(--white);
      }

      .contact-icon {
        width: 50px;
        height: 50px;
        background: var(--natural);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 16px rgba(198,255,83,0.3);
      }

      .contact-info-item a {
        color: var(--white);
        text-decoration: none;
        font-size: 18px;
        font-weight: 600;
        transition: color 0.3s ease;
      }

      .contact-info-item a:hover {
        color: var(--natural);
      }

      /* Main Contact Section */
      .contact-section {
        padding: 80px 24px;
        background: var(--white);
      }

      .section-container {
        max-width: 1400px;
        margin: 0 auto;
      }

      .section-intro {
        text-align: center;
        max-width: 800px;
        margin: 0 auto 60px;
      }

      .section-tag {
        display: inline-block;
        background: var(--pale-goldenrod);
        color: var(--green);
        padding: 10px 24px;
        border-radius: 24px;
        font-size: 13px;
        font-weight: 700;
        margin-bottom: 20px;
        letter-spacing: 1px;
        text-transform: uppercase;
      }

      .section-intro h2 {
        font-size: 42px;
        font-weight: 800;
        color: var(--black);
        margin-bottom: 20px;
        line-height: 1.2;
      }

      .section-intro p {
        font-size: 18px;
        color: var(--dim-grey);
        line-height: 1.7;
      }

      /* Contact Grid */
      .contact-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 48px;
        margin-top: 60px;
      }

      /* Calendar Section */
      .calendar-section {
        background: var(--grey);
        border-radius: 24px;
        padding: 40px;
        border: 3px solid var(--natural);
      }

      .calendar-section h3 {
        font-size: 28px;
        font-weight: 700;
        color: var(--black);
        margin-bottom: 16px;
        display: flex;
        align-items: center;
        gap: 12px;
      }

      .calendar-section h3::before {
        content: '';
        width: 6px;
        height: 32px;
        background: var(--natural);
        border-radius: 3px;
      }

      .calendar-description {
        font-size: 16px;
        color: var(--dim-grey);
        margin-bottom: 30px;
        line-height: 1.7;
      }

      .calendar-embed {
        width: 100%;
        min-height: 700px;
        border: none;
        border-radius: 12px;
        background: var(--white);
      }

      /* Form Section */
      .form-section {
        background: var(--grey);
        border-radius: 24px;
        padding: 40px;
        border: 3px solid var(--natural);
      }

      .form-section h3 {
        font-size: 28px;
        font-weight: 700;
        color: var(--black);
        margin-bottom: 16px;
        display: flex;
        align-items: center;
        gap: 12px;
      }

      .form-section h3::before {
        content: '';
        width: 6px;
        height: 32px;
        background: var(--natural);
        border-radius: 3px;
      }

      .form-description {
        font-size: 16px;
        color: var(--dim-grey);
        margin-bottom: 30px;
        line-height: 1.7;
      }

      .contact-form {
        display: flex;
        flex-direction: column;
        gap: 24px;
      }

      .form-group {
        display: flex;
        flex-direction: column;
        gap: 8px;
      }

      .form-group label {
        font-size: 15px;
        font-weight: 600;
        color: var(--black);
      }

      .form-group input,
      .form-group textarea {
        padding: 16px;
        border: 2px solid var(--silver);
        border-radius: 12px;
        font-size: 16px;
        font-family: inherit;
        transition: all 0.3s ease;
        background: var(--white);
      }

      .form-group input:focus,
      .form-group textarea:focus {
        outline: none;
        border-color: var(--natural);
        box-shadow: 0 0 0 3px rgba(198,255,83,0.2);
      }

      .form-group textarea {
        min-height: 150px;
        resize: vertical;
      }

      .form-required {
        color: var(--indian-red);
        margin-left: 4px;
      }

      .submit-btn {
        background: var(--natural);
        color: var(--black);
        padding: 18px 40px;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 700;
        font-size: 17px;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        border: 2px solid var(--natural);
        box-shadow: 0 4px 16px rgba(198,255,83,0.3);
        cursor: pointer;
      }

      .submit-btn:hover:not(:disabled) {
        background: var(--green);
        border-color: var(--green);
        color: var(--white);
        transform: translateY(-3px);
        box-shadow: 0 6px 24px rgba(43, 102, 72, 0.4);
      }

      .submit-btn:disabled {
        opacity: 0.6;
        cursor: not-allowed;
      }

      .form-message {
        padding: 16px;
        border-radius: 12px;
        font-size: 15px;
        font-weight: 600;
        text-align: center;
        display: none;
      }

      .form-message.success {
        background: var(--pale-goldenrod);
        color: var(--green);
        display: block;
      }

      .form-message.error {
        background: var(--misty-rose);
        color: var(--indian-red);
        display: block;
      }

      /* Info Cards Section */
      .info-cards-section {
        padding: 80px 24px;
        background: linear-gradient(to bottom, var(--honeydew), var(--white));
      }

      .info-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 32px;
        max-width: 1200px;
        margin: 0 auto;
      }

      .info-card {
        background: var(--white);
        border-radius: 20px;
        padding: 40px;
        border: 3px solid var(--natural);
        text-align: center;
        transition: all 0.3s ease;
      }

      .info-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 16px 48px rgba(43, 102, 72, 0.2);
      }

      .info-card-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, var(--dark-slate-blue), var(--dark-olive-green));
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 24px;
        box-shadow: 0 8px 24px rgba(8, 57, 129, 0.25);
      }

      .info-card h3 {
        font-size: 22px;
        font-weight: 700;
        color: var(--black);
        margin-bottom: 14px;
      }

      .info-card p {
        color: var(--dim-grey);
        line-height: 1.7;
        font-size: 15px;
        margin-bottom: 20px;
      }

      .info-card a {
        color: var(--dark-slate-blue);
        font-weight: 600;
        text-decoration: none;
        transition: color 0.3s ease;
      }

      .info-card a:hover {
        color: var(--green);
      }

      /* Map Section */
      .map-section {
        padding: 80px 24px;
        background: var(--white);
      }

      .map-section h2 {
        font-size: 42px;
        font-weight: 800;
        color: var(--black);
        margin-bottom: 40px;
        text-align: center;
      }

      .map-container {
        max-width: 1200px;
        margin: 0 auto;
        border-radius: 24px;
        overflow: hidden;
        border: 3px solid var(--natural);
        box-shadow: 0 16px 48px rgba(43, 102, 72, 0.15);
      }

      .map-embed {
        width: 100%;
        height: 500px;
        border: none;
      }

      /* Responsive Design */
      @media (max-width: 991px) {
        .hero-container h1 {
          font-size: 44px;
        }

        .contact-grid {
          grid-template-columns: 1fr;
          gap: 40px;
        }

        .calendar-embed {
          min-height: 600px;
        }
      }

      @media (max-width: 767px) {
        .hero-container h1 {
          font-size: 38px;
        }

        .hero-container p {
          font-size: 18px;
        }

        .contact-info-bar {
          flex-direction: column;
          gap: 24px;
        }

        .section-intro h2 {
          font-size: 36px;
        }

        .calendar-section,
        .form-section {
          padding: 30px;
        }

        .info-cards {
          grid-template-columns: 1fr;
        }

        .calendar-embed {
          min-height: 500px;
        }
      }

      @media (max-width: 479px) {
        .hero-container h1 {
          font-size: 32px;
        }

        .section-intro h2 {
          font-size: 30px;
        }
      }
    </style>
