  </head>
  <body>
    <Navbar />

    <!-- Hero Section -->
    <section class="hero-section">
      <div class="hero-container">
        <h1>
          Let's <span class="highlight">Transform</span> Your Practice
        </h1>
        <p>
          Pick a time or send us a quick message — we'll respond within one business day.
        </p>
        <div class="contact-info-bar">
          <div class="contact-info-item">
            <div class="contact-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="width: 24px; height: 24px; color: var(--dark-slate-blue);">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
              </svg>
            </div>
            <a href="tel:+16505578269">(650) 557-8269</a>
          </div>
          <div class="contact-info-item">
            <div class="contact-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="width: 24px; height: 24px; color: var(--dark-slate-blue);">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                <polyline points="22,6 12,13 2,6"></polyline>
              </svg>
            </div>
            <a href="mailto:support@dentistrygrowthpartners.com">support@dentistrygrowthpartners.com</a>
          </div>
        </div>
      </div>
    </section>

    <!-- Main Contact Section -->
    <section class="contact-section">
      <div class="section-container">
        <div class="section-intro">
          <span class="section-tag">Get In Touch</span>
          <h2>Choose Your Preferred Way to Connect</h2>
          <p>
            Book a time directly on our calendar for a personalized demo, or send us a message and we'll get back to you within one business day.
          </p>
        </div>

        <div class="contact-grid">
          
          <!-- Calendar Section -->
          <div class="calendar-section">
            <h3>Book a Demo Call</h3>
            <p class="calendar-description">
              Schedule a 30-minute demo to see how our complete automated system can transform your patient acquisition. Pick a time that works best for you.
            </p>
            <!-- Replace this URL with your actual calendar booking URL -->
            <iframe 
              src="https://calendar.google.com/calendar/appointments/schedules/YOUR_CALENDAR_ID" 
              class="calendar-embed"
              title="Book a Demo Call"
            ></iframe>
          </div>

          <!-- Contact Form Section -->
          <div class="form-section">
            <h3>Send Us a Message</h3>
            <p class="form-description">
              Prefer to write? Fill out the form below and we'll get back to you within one business day with answers to your questions.
            </p>
            
            <div id="formMessage" class="form-message"></div>
            
            <form id="contactForm" class="contact-form">
              <div class="form-group">
                <label for="name">Your Name <span class="form-required">*</span></label>
                <input 
                  type="text" 
                  id="name" 
                  name="name" 
                  required 
                  placeholder="Dr. John Smith"
                />
              </div>

              <div class="form-group">
                <label for="practice">Practice Name <span class="form-required">*</span></label>
                <input 
                  type="text" 
                  id="practice" 
                  name="practice" 
                  required 
                  placeholder="Smith Family Dentistry"
                />
              </div>

              <div class="form-group">
                <label for="email">Email Address <span class="form-required">*</span></label>
                <input 
                  type="email" 
                  id="email" 
                  name="email" 
                  required 
                  placeholder="dr.smith@example.com"
                />
              </div>

              <div class="form-group">
                <label for="phone">Phone Number <span class="form-required">*</span></label>
                <input 
                  type="tel" 
                  id="phone" 
                  name="phone" 
                  required 
                  placeholder="(555) 123-4567"
                />
              </div>

              <div class="form-group">
                <label for="message">Message <span class="form-required">*</span></label>
                <textarea 
                  id="message" 
                  name="message" 
                  required 
                  placeholder="Tell us about your practice and what you're looking to achieve..."
                ></textarea>
              </div>

              <button type="submit" class="submit-btn" id="submitBtn">
                <span>Send Message</span>
                <span>→</span>
              </button>
            </form>
          </div>

        </div>
      </div>
    </section>

    <!-- Info Cards Section -->
    <section class="info-cards-section">
      <div class="info-cards">
        
        <div class="info-card">
          <div class="info-card-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="width: 40px; height: 40px; color: white;">
              <circle cx="12" cy="12" r="10"></circle>
              <polyline points="12 6 12 12 16 14"></polyline>
            </svg>
          </div>
          <h3>Response Time</h3>
          <p>We typically respond to all inquiries within 4 business hours. For urgent matters, please call us directly.</p>
          <a href="tel:+16505578269">Call: (650) 557-8269</a>
        </div>

        <div class="info-card">
          <div class="info-card-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="width: 40px; height: 40px; color: white;">
              <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
            </svg>
          </div>
          <h3>Support Hours</h3>
          <p>Our team is available Monday through Friday, 9 AM to 6 PM EST. Weekend messages receive responses on Monday.</p>
          <a href="mailto:support@dentistrygrowthpartners.com">Email Us</a>
        </div>

        <div class="info-card">
          <div class="info-card-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="width: 40px; height: 40px; color: white;">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
            </svg>
          </div>
          <h3>Demo Calls</h3>
          <p>Schedule a personalized 30-minute demo to see our system in action and discuss your specific practice needs.</p>
          <a href="#calendar">Book Your Demo</a>
        </div>

      </div>
    </section>

    <!-- Footer Component -->
    <Footer />

    <!-- Sticky CTA Component -->
    <StickyCTA />

    <!-- Form Submission Script -->
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('contactForm');
        const submitBtn = document.getElementById('submitBtn');
        const formMessage = document.getElementById('formMessage');

        form.addEventListener('submit', async function(e) {
          e.preventDefault();

          // Disable submit button
          submitBtn.disabled = true;
          submitBtn.innerHTML = '<span>Sending...</span>';

          // Get form data
          const formData = new FormData(form);
          
          // Get current page URL and base URL
          const currentUrl = window.location.href;
          const baseUrl = window.location.origin;
          
          // Create payload with all form data
          const payload = {
            formData: {
              name: formData.get('name'),
              practice: formData.get('practice'),
              email: formData.get('email'),
              phone: formData.get('phone'),
              message: formData.get('message')
            },
            pageInfo: {
              currentUrl: currentUrl,
              baseUrl: baseUrl,
              pagePath: window.location.pathname,
              timestamp: new Date().toISOString(),
              userAgent: navigator.userAgent
            }
          };

          try {
            const response = await fetch('https://n8n.srv791889.hstgr.cloud/webhook/dgp-website-forms', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify(payload)
            });

            if (response.ok) {
              // Success
              formMessage.className = 'form-message success';
              formMessage.textContent = '✓ Thank you! Your message has been sent successfully. We\'ll respond within one business day.';
              form.reset();
              
              // Hide success message after 10 seconds
              setTimeout(() => {
                formMessage.style.display = 'none';
              }, 10000);
            } else {
              throw new Error('Form submission failed');
            }
          } catch (error) {
            // Error
            formMessage.className = 'form-message error';
            formMessage.textContent = '✗ Sorry, something went wrong. Please try again or call us at (650) 557-8269.';
            console.error('Form submission error:', error);
          } finally {
            // Re-enable submit button
            submitBtn.disabled = false;
            submitBtn.innerHTML = '<span>Send Message</span><span>→</span>';
          }
        });
      });
    </script>

