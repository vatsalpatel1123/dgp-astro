      .meta-item {
        display: flex;
        align-items: center;
        gap: 6px;
      }

      .read-more-btn {
        background: var(--dark-slate-blue);
        color: var(--white);
        padding: 14px 32px;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 700;
        font-size: 15px;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        width: fit-content;
      }

      .read-more-btn:hover {
        background: var(--green);
        transform: translateX(5px);
      }

      /* Blog Posts Grid */
      .posts-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
        gap: 32px;
      }

      .post-card {
        background: var(--grey);
        border-radius: 20px;
        overflow: hidden;
        border: 2px solid transparent;
        transition: all 0.3s ease;
        text-decoration: none;
        color: inherit;
        display: block;
      }

      .post-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 16px 48px rgba(43, 102, 72, 0.15);
        border-color: var(--natural);
      }

      .post-image {
        width: 100%;
        height: 220px;
        object-fit: cover;
        background: linear-gradient(135deg, var(--dark-slate-blue), var(--dark-olive-green));
      }

      .post-content {
        padding: 28px;
      }

      .post-category {
        display: inline-block;
        background: var(--pale-goldenrod);
        color: var(--green);
        padding: 6px 14px;
        border-radius: 16px;
        font-size: 12px;
        font-weight: 700;
        margin-bottom: 14px;
      }

      .post-content h3 {
        font-size: 21px;
        font-weight: 700;
        color: var(--black);
        margin-bottom: 12px;
        line-height: 1.4;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
      }

      .post-content > p {
        font-size: 15px;
        color: var(--dim-grey);
        line-height: 1.6;
        margin-bottom: 20px;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
      }

      .post-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 20px;
        border-top: 1px solid var(--silver);
      }

      .post-author {
        font-size: 13px;
        color: var(--dim-grey);
        font-weight: 600;
      }

      .post-date {
        font-size: 13px;
        color: var(--dark-grey);
      }

      /* Sidebar */
      .blog-sidebar {
        /* Sidebar content */
      }

      .sidebar-section {
        background: var(--grey);
        border-radius: 20px;
        padding: 32px;
        margin-bottom: 32px;
        border: 2px solid var(--natural);
      }

      .sidebar-section h3 {
        font-size: 20px;
        font-weight: 700;
        color: var(--black);
        margin-bottom: 20px;
      }

      .category-list {
        display: flex;
        flex-direction: column;
        gap: 12px;
      }

      .category-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 12px 16px;
        background: var(--white);
        border-radius: 12px;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        color: var(--black);
      }

      .category-item:hover,
      .category-item.active {
        background: var(--natural);
        transform: translateX(5px);
      }

      .category-name {
        font-weight: 600;
        font-size: 15px;
      }

      .category-count {
        background: rgba(0,0,0,0.1);
        padding: 4px 10px;
        border-radius: 12px;
        font-size: 13px;
        font-weight: 700;
      }

      /* Recent Posts */
      .recent-posts {
        display: flex;
        flex-direction: column;
        gap: 20px;
      }

      .recent-post-item {
        display: flex;
        gap: 16px;
        text-decoration: none;
        transition: all 0.3s ease;
      }

      .recent-post-item:hover {
        transform: translateX(5px);
      }

      .recent-post-image {
        width: 80px;
        height: 80px;
        border-radius: 12px;
        object-fit: cover;
        flex-shrink: 0;
        background: linear-gradient(135deg, var(--dark-slate-blue), var(--dark-olive-green));
      }

      .recent-post-content h4 {
        font-size: 15px;
        font-weight: 700;
        color: var(--black);
        margin-bottom: 6px;
        line-height: 1.4;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
      }

      .recent-post-date {
        font-size: 13px;
        color: var(--dim-grey);
      }

      /* Newsletter */
      .newsletter-form {
        display: flex;
        flex-direction: column;
        gap: 12px;
      }

      .newsletter-form input {
        padding: 14px;
        border: 2px solid var(--silver);
        border-radius: 12px;
        font-size: 15px;
        font-family: inherit;
        transition: all 0.3s ease;
      }

      .newsletter-form input:focus {
        outline: none;
        border-color: var(--natural);
        box-shadow: 0 0 0 3px rgba(198,255,83,0.2);
      }

      .newsletter-btn {
        background: var(--dark-slate-blue);
        color: var(--white);
        padding: 14px 24px;
        border-radius: 12px;
        border: none;
        font-weight: 700;
        font-size: 15px;
        cursor: pointer;
        transition: all 0.3s ease;
      }

      .newsletter-btn:hover {
        background: var(--green);
        transform: translateY(-2px);
      }

      /* Pagination */
      .pagination-section {
        margin-top: 80px;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 12px;
      }

      .pagination-btn {
        width: 44px;
        height: 44px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--grey);
        color: var(--black);
        text-decoration: none;
        font-weight: 600;
        font-size: 15px;
        transition: all 0.3s ease;
        border: 2px solid transparent;
      }

      .pagination-btn:hover:not(.disabled) {
        background: var(--natural);
        transform: translateY(-3px);
      }

      .pagination-btn.active {
        background: var(--dark-slate-blue);
        color: var(--white);
        border-color: var(--natural);
      }

      .pagination-btn.disabled {
        opacity: 0.4;
        cursor: not-allowed;
        pointer-events: none;
      }

      .pagination-dots {
        padding: 0 8px;
        color: var(--dim-grey);
        font-weight: 700;
      }

      /* CTA Section */
      .cta-section {
        padding: 100px 24px;
        background: linear-gradient(135deg, var(--dark-slate-blue), var(--dark-olive-green));
        text-align: center;
        margin-top: 100px;
      }

      .cta-section h2 {
        font-size: 46px;
        font-weight: 800;
        color: var(--white);
        margin-bottom: 24px;
        line-height: 1.2;
      }

      .cta-section .highlight {
        color: var(--natural);
      }

      .cta-section p {
        font-size: 20px;
        color: rgba(255,255,255,0.9);
        margin-bottom: 40px;
        max-width: 700px;
        margin-left: auto;
        margin-right: auto;
        line-height: 1.7;
      }

      .cta-buttons {
        display: flex;
        gap: 16px;
        justify-content: center;
        flex-wrap: wrap;
      }

      .btn-primary {
        background: var(--natural);
        color: var(--black);
        padding: 18px 40px;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 700;
        font-size: 17px;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        border: 2px solid var(--natural);
        box-shadow: 0 4px 16px rgba(198,255,83,0.3);
      }

      .btn-primary:hover {
        background: transparent;
        color: var(--natural);
        transform: translateY(-3px);
        box-shadow: 0 6px 24px rgba(198,255,83,0.4);
      }

      /* Responsive Design */
      @media (max-width: 1200px) {
        .blog-layout {
          grid-template-columns: 1fr;
        }

        .blog-sidebar {
