    <style>
      :root {
        --black: #1d1d1d;
        --dim-grey: #646464;
        --dark-olive-green: #194c8b;
        --white: white;
        --dark-slate-blue: #083981;
        --natural: #c6ff53;
        --grey: whitesmoke;
        --green: #2b6648;
        --orange: #eb742e;
        --dark-grey: #9f9f9f;
        --misty-rose: #ffe4d4;
        --pale-goldenrod: #e3fcb0;
        --indian-red: #db5656;
        --blue: #474bc5;
        --silver: #c5c5c5;
        --honeydew: #e7fff3;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        color: var(--black);
        line-height: 1.6;
        overflow-x: hidden;
      }

      /* Hero Section */
      .hero-section {
        background: linear-gradient(135deg, var(--dark-slate-blue) 0%, var(--dark-olive-green) 100%);
        padding: 140px 24px 80px;
        position: relative;
        overflow: hidden;
        text-align: center;
      }

      .hero-section::before {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        width: 50%;
        height: 100%;
        background: url('data:image/svg+xml,<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg"><circle cx="50" cy="50" r="2" fill="rgba(198,255,83,0.1)"/></svg>') repeat;
        opacity: 0.3;
      }

      .hero-container {
        max-width: 900px;
        margin: 0 auto;
        position: relative;
        z-index: 1;
      }

      .hero-container h1 {
        font-size: 58px;
        font-weight: 800;
        color: var(--white);
        line-height: 1.1;
        margin-bottom: 24px;
        letter-spacing: -1.5px;
      }

      .hero-container .highlight {
        color: var(--natural);
      }

      .hero-container p {
        font-size: 22px;
        color: rgba(255,255,255,0.9);
        line-height: 1.7;
        margin-bottom: 20px;
      }

      /* Search Bar */
      .search-section {
        max-width: 700px;
        margin: 40px auto 0;
      }

      .search-bar {
        position: relative;
      }

      .search-bar input {
        width: 100%;
        padding: 18px 60px 18px 24px;
        border: 2px solid rgba(255,255,255,0.3);
        border-radius: 50px;
        font-size: 16px;
        font-family: inherit;
        background: rgba(255,255,255,0.1);
        color: var(--white);
        backdrop-filter: blur(10px);
        transition: all 0.3s ease;
      }

      .search-bar input::placeholder {
        color: rgba(255,255,255,0.6);
      }

      .search-bar input:focus {
        outline: none;
        border-color: var(--natural);
        background: rgba(255,255,255,0.15);
        box-shadow: 0 0 0 3px rgba(198,255,83,0.2);
      }

      .search-btn {
        position: absolute;
        right: 8px;
        top: 50%;
        transform: translateY(-50%);
        background: var(--natural);
        color: var(--black);
        border: none;
        width: 44px;
        height: 44px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s ease;
      }

      .search-btn:hover {
        background: var(--green);
        color: var(--white);
        transform: translateY(-50%) scale(1.1);
      }

      /* Blog Container */
