---
// services.astro
import '../css/main.css';
import '../css/about-dgp.css';
import Navigation from '../components/Navigation.astro';
import FooterBar from '../components/FooterBar.astro';
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Our Solutions | Dentistry Growth Partners</title>
  <meta name="description" content="Complete marketing and optimization solutions for dental practices. Drive consistent patient flow and increase conversion rates.">
  <!-- Favicon -->
  <link rel="icon" type="image/png" href="/636f4050ef41c9124a12cbba/dgp-logo1.png" />
  <link rel="shortcut icon" type="image/png" href="/636f4050ef41c9124a12cbba/dgp-logo1.png" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tabler/icons-webfont@latest/tabler-icons.min.css">
  
  <style>
    /* ============================================
       RESET & BASE STYLES
    ============================================ */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    :root {
      --dark-slate-blue: #083981;
      --natural: #c6ff53;
      --white: #ffffff;
      --black: #1d1d1d;
      --grey: #f5f5f5;
      --dim-grey: #646464;
      --dark-olive-green: #194c8b;
      --green: #2b6648;
      --pale-goldenrod: #e3fcb0;
    }

    body {
      font-family: 'Inter', sans-serif;
      background: var(--white);
      color: var(--black);
      line-height: 1.6;
      overflow-x: hidden;
    }

    .section-container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 0 24px;
    }

    /* ============================================
       HERO SECTION
    ============================================ */
    .services-hero {
      min-height: 90vh;
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
      overflow: hidden;
      background: linear-gradient(135deg, #1e3a5f 0%, #0a4d9e 50%, #2b6648 100%);
      padding: 200px 24px 100px;
      /* margin-top: 120px; */
    }

    /* Animated grid background */
    .services-hero .hero-background {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      overflow: hidden;
      opacity: 0.15;
      z-index: 0;
    }

    .services-hero .hero-background::before {
      content: '';
      position: absolute;
      width: 100%;
      height: 100%;
      background-image:
        linear-gradient(rgba(198, 255, 83, 0.1) 2px, transparent 2px),
        linear-gradient(90deg, rgba(198, 255, 83, 0.1) 2px, transparent 2px);
      background-size: 60px 60px;
      animation: gridMove 20s linear infinite;
    }

    @keyframes gridMove {
      0% {
        transform: translate(0, 0);
      }
      100% {
        transform: translate(60px, 60px);
      }
    }

    .services-hero .hero-shapes {
      position: absolute;
      width: 100%;
      height: 100%;
      top: 0;
      left: 0;
    }

    .services-hero .shape {
      position: absolute;
      filter: blur(80px);
      opacity: 0.3;
      will-change: transform;
      pointer-events: none;
    }

    .services-hero .shape-1 {
      width: 500px;
      height: 500px;
      background: radial-gradient(circle, rgba(198, 255, 83, 0.4) 0%, transparent 70%);
      top: -150px;
      right: -150px;
      animation: floatSlow 15s infinite ease-in-out;
    }

    .services-hero .shape-2 {
      width: 400px;
      height: 400px;
      background: radial-gradient(circle, rgba(198, 255, 83, 0.3) 0%, transparent 70%);
      bottom: -250px;
      left: -250px;
      animation: floatSlow 18s infinite ease-in-out reverse;
    }

    .services-hero .shape-3 {
      width: 350px;
      height: 350px;
      background: radial-gradient(circle, rgba(255, 255, 255, 0.2) 0%, transparent 70%);
      top: 15%;
      left: 50%;
      transform: translateX(-50%);
      animation: floatSlow 20s infinite ease-in-out;
    }

    @keyframes floatSlow {
      0%, 100% {
        transform: translate(0, 0) scale(1);
      }
      33% {
        transform: translate(40px, -40px) scale(1.1);
      }
      66% {
        transform: translate(-30px, 30px) scale(0.95);
      }
    }

    .services-hero .hero-container {
      max-width: 1200px;
      width: 100%;
      margin: 0 auto;
      position: relative;
      z-index: 10;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      text-align: center;
    }

    .services-hero .hero-badge {
      display: inline-flex;
      align-items: center;
      gap: 10px;
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border: 2px solid rgba(198, 255, 83, 0.3);
      padding: 12px 28px;
      border-radius: 50px;
      color: var(--white);
      font-size: 15px;
      font-weight: 700;
      margin-bottom: 32px;
      transition: all 0.3s ease;
    }

    .services-hero .hero-badge i {
      font-size: 20px;
      color: var(--natural);
    }

    .services-hero h1 {
      font-size: clamp(36px, 5.5vw, 68px);
      font-weight: 800;
      color: #ffffff;
      line-height: 1.2;
      margin: 0 auto 24px;
      letter-spacing: -1.5px;
      text-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
      max-width: 1000px;
      padding: 0 20px;
    }

    .services-hero .highlight-animated {
      color: var(--natural);
      position: relative;
      display: inline-block;
      background: linear-gradient(135deg, #c6ff53 0%, #d4ff8d 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .services-hero .highlight-animated::after {
      content: '';
      position: absolute;
      bottom: -4px;
      left: 0;
      right: 0;
      height: 8px;
      background: #c6ff53;
      opacity: 0.3;
      border-radius: 4px;
      transform: scaleX(0);
      animation: underlineGrow 0.8s ease-out 0.3s forwards;
    }

    @keyframes underlineGrow {
      to {
        transform: scaleX(1);
      }
    }

    .services-hero .hero-description {
      font-size: 20px;
      color: rgba(255,255,255,0.9);
      line-height: 1.7;
      max-width: 800px;
      margin: 0 auto 48px;
    }

    .services-hero .hero-stats {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 32px;
      margin-bottom: 48px;
      flex-wrap: wrap;
    }

    .services-hero .hero-stat {
      display: flex;
      align-items: center;
      gap: 16px;
      background: rgba(255, 255, 255, 0.08);
      backdrop-filter: blur(10px);
      border: 2px solid rgba(198, 255, 83, 0.2);
      padding: 20px 32px;
      border-radius: 16px;
      transition: all 0.3s ease;
    }

    .services-hero .hero-stat:hover {
      background: rgba(255, 255, 255, 0.12);
      border-color: rgba(198, 255, 83, 0.4);
      transform: translateY(-4px);
    }

    .services-hero .stat-icon {
      width: 48px;
      height: 48px;
      background: linear-gradient(135deg, var(--natural), #d4ff8d);
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 24px;
      color: var(--dark-slate-blue);
    }

    .services-hero .stat-content {
      display: flex;
      flex-direction: column;
    }

    .services-hero .stat-label {
      font-size: 14px;
      color: rgba(255, 255, 255, 0.9);
      font-weight: 600;
      line-height: 1.3;
    }

    .services-hero .scroll-indicator {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 8px;
      color: rgba(255, 255, 255, 0.7);
      font-size: 14px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .services-hero .scroll-indicator:hover {
      color: var(--natural);
      transform: translateY(4px);
    }

    .services-hero .scroll-indicator i {
      font-size: 24px;
      animation: bounce 2s infinite;
    }

    @keyframes bounce {
      0%, 100% {
        transform: translateY(0);
      }
      50% {
        transform: translateY(8px);
      }
    }

    /* ============================================
       SERVICES SECTION
    ============================================ */
    .services-section {
      padding: 120px 24px;
      background: var(--white);
    }

    .services-list {
      max-width: 1200px;
      margin: 0 auto;
      display: flex;
      flex-direction: column;
      gap: 32px;
    }

    .service-card {
      background: var(--white);
      border: 3px solid var(--grey);
      border-radius: 24px;
      padding: 48px;
      display: grid;
      grid-template-columns: auto 1fr auto;
      align-items: center;
      gap: 40px;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
      overflow: hidden;
    }

    .service-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(135deg, transparent 0%, rgba(198, 255, 83, 0.03) 100%);
      opacity: 0;
      transition: opacity 0.4s ease;
    }

    .service-card:hover {
      border-color: var(--natural);
      transform: translateY(-8px);
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.12);
    }

    .service-card:hover::before {
      opacity: 1;
    }

    .service-icon {
      width: 100px;
      height: 100px;
      background: linear-gradient(135deg, var(--dark-slate-blue), var(--dark-olive-green));
      border-radius: 20px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 48px;
      color: var(--natural);
      flex-shrink: 0;
      transition: all 0.4s ease;
      position: relative;
      z-index: 1;
    }

    .service-card:hover .service-icon {
      transform: scale(1.1) rotate(5deg);
      box-shadow: 0 8px 24px rgba(198, 255, 83, 0.3);
    }

    .service-content {
      position: relative;
      z-index: 1;
    }

    .service-content h3 {
      font-size: 28px;
      font-weight: 800;
      color: var(--dark-slate-blue);
      margin-bottom: 12px;
      letter-spacing: -0.5px;
    }

    .service-content p {
      font-size: 17px;
      color: var(--dim-grey);
      line-height: 1.6;
      margin: 0;
    }

    .service-cta {
      display: inline-flex;
      align-items: center;
      gap: 12px;
      padding: 16px 32px;
      background: var(--natural);
      color: var(--dark-slate-blue);
      font-size: 16px;
      font-weight: 700;
      border-radius: 12px;
      text-decoration: none;
      transition: all 0.3s ease;
      border: 2px solid var(--natural);
      flex-shrink: 0;
      position: relative;
      z-index: 1;
    }

    .service-cta:hover {
      background: var(--dark-slate-blue);
      color: var(--natural);
      transform: translateX(4px);
      box-shadow: 0 8px 24px rgba(8, 57, 129, 0.2);
    }

    .service-cta i {
      font-size: 20px;
      transition: transform 0.3s ease;
    }

    .service-cta:hover i {
      transform: translateX(4px);
    }

    /* ============================================
       CTA SECTION
    ============================================ */
    .final-cta-section {
      padding: 100px 24px;
      background: linear-gradient(135deg, var(--dark-slate-blue) 0%, var(--dark-olive-green) 100%);
      position: relative;
      overflow: hidden;
    }

    .final-cta-section::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: url('data:image/svg+xml,<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg"><circle cx="50" cy="50" r="2" fill="rgba(198,255,83,0.1)"/></svg>') repeat;
      opacity: 0.3;
    }

    .cta-content {
      max-width: 800px;
      margin: 0 auto;
      text-align: center;
      position: relative;
      z-index: 10;
    }

    .cta-badge {
      display: inline-flex;
      align-items: center;
      gap: 10px;
      background: rgba(198, 255, 83, 0.15);
      border: 2px solid var(--natural);
      padding: 10px 24px;
      border-radius: 50px;
      color: var(--natural);
      font-size: 14px;
      font-weight: 700;
      margin-bottom: 24px;
    }

    .cta-badge i {
      font-size: 18px;
    }

    .final-cta-section h2 {
      font-size: clamp(32px, 4vw, 48px);
      font-weight: 800;
      color: var(--white);
      margin-bottom: 20px;
      line-height: 1.2;
      letter-spacing: -1px;
    }

    .final-cta-section p {
      font-size: 18px;
      color: rgba(255, 255, 255, 0.9);
      margin-bottom: 40px;
      line-height: 1.6;
    }

    .cta-button {
      display: inline-flex;
      align-items: center;
      gap: 12px;
      padding: 20px 48px;
      background: var(--natural);
      color: var(--dark-slate-blue);
      font-size: 18px;
      font-weight: 700;
      border-radius: 14px;
      text-decoration: none;
      transition: all 0.3s ease;
      border: 3px solid var(--natural);
      box-shadow: 0 8px 24px rgba(198, 255, 83, 0.3);
    }

    .cta-button:hover {
      background: transparent;
      color: var(--natural);
      transform: translateY(-4px);
      box-shadow: 0 12px 32px rgba(198, 255, 83, 0.4);
    }

    .cta-button i {
      font-size: 22px;
      transition: transform 0.3s ease;
    }

    .cta-button:hover i {
      transform: translateX(4px);
    }

    /* ============================================
       FLOATING CTA BUTTONS
    ============================================ */
    .floating-cta {
      position: fixed;
      bottom: 32px;
      right: 32px;
      display: flex;
      flex-direction: column;
      gap: 16px;
      z-index: 1000;
    }

    .floating-btn {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 16px 24px;
      background: var(--natural);
      color: var(--dark-slate-blue);
      border-radius: 50px;
      text-decoration: none;
      font-weight: 700;
      font-size: 15px;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
      transition: all 0.3s ease;
    }

    .floating-btn:hover {
      transform: translateY(-4px);
      box-shadow: 0 12px 32px rgba(0, 0, 0, 0.3);
      background: var(--dark-slate-blue);
      color: var(--natural);
    }

    /* ============================================
       RESPONSIVE DESIGN
    ============================================ */
    @media (max-width: 991px) {
      .services-hero {
        padding: 160px 24px 100px;
        /* margin-top: 120px; */
        min-height: 85vh;
      }

      .services-hero h1 {
        font-size: clamp(36px, 6vw, 52px);
      }

      .services-hero .shape-1,
      .services-hero .shape-2,
      .services-hero .shape-3 {
        filter: blur(60px);
      }

      .services-hero .shape-1 {
        width: 400px;
        height: 400px;
      }

      .services-hero .shape-2 {
        width: 350px;
        height: 350px;
      }

      .services-hero .shape-3 {
        width: 300px;
        height: 300px;
      }

      .service-card {
        grid-template-columns: 1fr;
        gap: 24px;
        padding: 40px 32px;
        text-align: center;
      }

      .service-icon {
        margin: 0 auto;
      }

      .service-cta {
        margin: 0 auto;
      }

      .services-section {
        padding: 80px 24px;
      }

      .final-cta-section {
        padding: 80px 24px;
      }
    }

    @media (max-width: 767px) {
      .services-hero {
        padding: 140px 20px 80px;
        margin-top: 100px;
        min-height: 80vh;
      }

      .services-hero .hero-background::before {
        background-size: 40px 40px;
      }

      .services-hero h1 {
        font-size: clamp(28px, 7vw, 42px);
        margin-bottom: 20px;
        padding: 0 10px;
      }

      .services-hero .hero-description {
        font-size: 18px;
        margin-bottom: 40px;
      }

      .services-hero .shape-1,
      .services-hero .shape-2,
      .services-hero .shape-3 {
        filter: blur(50px);
      }

      .services-hero .shape-1 {
        width: 300px;
        height: 300px;
        top: -100px;
        right: -100px;
      }

      .services-hero .shape-2 {
        width: 250px;
        height: 250px;
        bottom: -150px;
        left: -150px;
      }

      .services-hero .shape-3 {
        width: 200px;
        height: 200px;
      }

      .services-hero .hero-stats {
        gap: 20px;
        margin-bottom: 40px;
      }

      .services-hero .hero-stat {
        padding: 16px 24px;
      }

      .services-hero .stat-icon {
        width: 40px;
        height: 40px;
        font-size: 20px;
      }

      .services-hero .stat-label {
        font-size: 13px;
      }

      .services-hero .hero-badge {
        padding: 10px 20px;
        font-size: 13px;
      }

      .service-card {
        padding: 32px 24px;
        gap: 20px;
      }

      .service-icon {
        width: 80px;
        height: 80px;
        font-size: 40px;
      }

      .service-content h3 {
        font-size: 22px;
      }

      .service-content p {
        font-size: 15px;
      }

      .service-cta {
        padding: 14px 28px;
        font-size: 15px;
        width: 100%;
        justify-content: center;
      }

      .services-list {
        gap: 24px;
      }

      .services-section {
        padding: 60px 20px;
      }

      .final-cta-section {
        padding: 60px 20px;
      }

      .final-cta-section h2 {
        font-size: 28px;
      }

      .final-cta-section p {
        font-size: 16px;
      }

      .cta-button {
        padding: 18px 36px;
        font-size: 16px;
      }

      .floating-cta {
        bottom: 20px;
        right: 20px;
        gap: 12px;
      }

      .floating-btn {
        padding: 14px 20px;
        font-size: 14px;
      }

      .floating-btn span {
        display: none;
      }
    }

    @media (max-width: 479px) {
      .services-hero {
        padding: 120px 16px 60px;
        margin-top: 80px;
      }

      .services-hero .hero-background::before {
        background-size: 30px 30px;
      }

      .services-hero h1 {
        font-size: clamp(24px, 8vw, 36px);
        padding: 0 5px;
      }

      .services-hero .hero-description {
        font-size: 16px;
      }

      .services-hero .shape-1,
      .services-hero .shape-2,
      .services-hero .shape-3 {
        display: none;
      }

      .services-hero .hero-stats {
        flex-direction: column;
        gap: 16px;
        margin-bottom: 32px;
      }

      .services-hero .hero-stat {
        width: 100%;
        max-width: 300px;
        justify-content: center;
        padding: 14px 20px;
      }

      .service-content h3 {
        font-size: 20px;
      }

      .service-icon {
        width: 70px;
        height: 70px;
        font-size: 36px;
      }
    }
  </style>
</head>
<body>
    <Navigation />
  <!-- ============================================
       HERO SECTION
  ============================================ -->
  <section class="services-hero">
    <div class="hero-background">
      <div class="hero-shapes">
        <div class="shape shape-1"></div>
        <div class="shape shape-2"></div>
        <div class="shape shape-3"></div>
      </div>
    </div>

    <div class="hero-container">
      <div class="hero-badge" data-aos="fade-up">
        <i class="ti ti-checkup-list"></i>
        <span>Our Solutions</span>
      </div>

      <h1 data-aos="fade-up" data-aos-delay="100">
        Complete Solutions to <span class="highlight-animated">Improve</span> Your Practice
      </h1>

      <p class="hero-description" data-aos="fade-up" data-aos-delay="200">
        Our comprehensive suite of solutions to drive consistent patient flow, optimize your practice,
        and increase conversion and retention.
      </p>

      <div class="hero-stats" data-aos="fade-up" data-aos-delay="300">
        <div class="hero-stat">
          <div class="stat-icon">
            <i class="ti ti-dental"></i>
          </div>
          <div class="stat-content">
            <span class="stat-label">High-Value Cases</span>
          </div>
        </div>
        <div class="hero-stat">
          <div class="stat-icon">
            <i class="ti ti-robot"></i>
          </div>
          <div class="stat-content">
            <span class="stat-label">AI Automation</span>
          </div>
        </div>
        <div class="hero-stat">
          <div class="stat-icon">
            <i class="ti ti-chart-line"></i>
          </div>
          <div class="stat-content">
            <span class="stat-label">Growth Systems</span>
          </div>
        </div>
      </div>

      <div class="scroll-indicator" data-aos="fade-up" data-aos-delay="400">
        <span>Explore our solutions</span>
        <i class="ti ti-chevron-down"></i>
      </div>
    </div>
  </section>

  <!-- ============================================
       SERVICES SECTION
  ============================================ -->
  <section class="services-section">
    <div class="section-container">
      <div class="services-list">

        <!-- Service 1: Multi-Implant Marketing -->
        <div class="service-card">
          <div class="service-icon">
            <i class="ti ti-dental"></i>
          </div>
          <div class="service-content">
            <h3>Multi-Implant Marketing</h3>
            <p>
              Targeted marketing campaigns specifically designed to attract high-value multi-implant cases 
              worth $15k-75k directly to your practice.
            </p>
          </div>
          <a href="/multi-implant-marketing" class="service-cta">
            Learn More
            <i class="ti ti-arrow-right"></i>
          </a>
        </div>

        <!-- Service 2: High-Value Case Marketing -->
        <div class="service-card">
          <div class="service-icon">
            <i class="ti ti-diamond"></i>
          </div>
          <div class="service-content">
            <h3>High-Value Case Marketing</h3>
            <p>
              Premium marketing strategies focused on attracting high value cases like veneers, crowns, 
              bridges and more.
            </p>
          </div>
          <a href="/high-value-case-marketing" class="service-cta">
            Learn More
            <i class="ti ti-arrow-right"></i>
