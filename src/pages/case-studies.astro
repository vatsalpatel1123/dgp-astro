---
// case-studies.astro - Real Results Page with Authentic Case Studies Only
import '../css/main.css';
import '../css/case-studies.css';
import Navigation from '../components/Navigation.astro';
import FooterBar from '../components/FooterBar.astro';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Real Results from Real Practices | Dentistry Growth Partners</title>
  <meta name="description" content="These are actual results from our client practices—no fabricated data. See real ROI, case studies, and testimonials from dental practices.">
  <meta property="og:title" content="Real Results from Real Practices | Dentistry Growth Partners">
  <meta property="og:description" content="Authentic case studies showing real revenue growth and ROI from dental practices using our system.">
  <meta property="og:type" content="website">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  
  <!-- Tabler Icons CDN -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tabler/icons-webfont@latest/tabler-icons.min.css">
</head>
<body>

  <Navigation />

  <!-- ============================================
       HERO SECTION
  ============================================ -->
  <section class="case-studies-hero">
    <!-- Animated Background -->
    <div class="hero-background">
      <div class="hero-shapes">
        <div class="shape shape-1"></div>
        <div class="shape shape-2"></div>
        <div class="shape shape-3"></div>
      </div>
    </div>

    <div class="hero-container">
      <h1>Real Results from <span class="highlight">Real Practices</span></h1>
      <p class="hero-description">
        These are actual results from our client practices—no fabricated data.
      </p>

      <!-- Hero Features -->
      <div class="hero-features">
        <div class="hero-feature">
          <i class="ti ti-certificate"></i>
          <span>Verified Results</span>
        </div>
        <div class="hero-feature">
          <i class="ti ti-chart-dots"></i>
          <span>Detailed Analysis</span>
        </div>
        <div class="hero-feature">
          <i class="ti ti-trending-up"></i>
          <span>What to Expect</span>
        </div>
      </div>
    </div>
  </section>

  <!-- ============================================
       DOWNLOADABLE CASE STUDIES SECTION
  ============================================ -->
  <section class="downloadable-studies-section">
    <div class="section-container">
      <div class="section-header">
        <span class="section-tag">
          <i class="ti ti-chart-dots"></i>
          Detailed Analysis
        </span>
        <h2 class="section-title">Download Our Complete Case Studies</h2>
        <p class="section-description">
          In-depth analysis and real data from our partner practices. Download or preview the full reports.
        </p>
      </div>

      <div class="download-cards-grid">
        
        <!-- Case Study Document 1 -->
        <div class="download-card">
          <div class="download-icon">
            <i class="ti ti-file-analytics"></i>
          </div>
          <h3>Comprehensive Campaign Analysis</h3>
          <p class="download-subtitle">Lead Quality (LQ) vs. Lead Volume (LV)</p>
          <p class="download-description">
            Complete breakdown comparing lead quality strategies vs volume-based approaches, including conversion rates, cost per acquisition, and long-term ROI metrics.
          </p>
          <div class="download-actions">
            <button class="btn-preview" data-pdf="campaign-analysis.pdf">
              <i class="ti ti-eye"></i>
              Preview
            </button>
            <a href="/downloads/campaign-analysis.pdf" download class="btn-download">
              <i class="ti ti-download"></i>
              Download PDF
            </a>
          </div>
        </div>

        <!-- Case Study Document 2 -->
        <div class="download-card">
          <div class="download-icon">
            <i class="ti ti-chart-line"></i>
          </div>
          <h3>Summit Dental Implants Case Study</h3>
          <p class="download-subtitle">Quality-First Lead Gen System</p>
          <p class="download-description">
            Real results from Summit Dental's implementation of our quality-first lead generation system, including month-by-month breakdown of consultations, conversion rates, and revenue growth.
          </p>
          <div class="download-actions">
            <button class="btn-preview" data-pdf="summit-dental-case-study.pdf">
              <i class="ti ti-eye"></i>
              Preview
            </button>
            <a href="/downloads/summit-dental-case-study.pdf" download class="btn-download">
              <i class="ti ti-download"></i>
              Download PDF
