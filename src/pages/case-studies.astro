        Join the dental practices achieving 8-10x ROI and adding $300K-$750K in revenue with our proven system.
      </p>
      <a href="/book-a-call" class="btn-primary">
        Speak to Our Team
        <i class="ti ti-arrow-right"></i>
      </a>
    </div>
  </section>

  <FooterBar />

  <!-- ============================================
       FLOATING CTA BUTTONS
  ============================================ -->
  <div class="floating-cta">
    <a href="/book-a-call" class="floating-btn">
      <i class="ti ti-calendar-event" style="font-size: 24px;"></i>
      <span>Let's Talk</span>
    </a>
    <a href="tel:+16505578269" class="floating-btn">
      <i class="ti ti-phone" style="font-size: 24px;"></i>
      <span>Call Now</span>
    </a>
  </div>

  <!-- ============================================
       PDF PREVIEW MODAL
  ============================================ -->
  <div class="pdf-modal" id="pdfModal">
    <div class="pdf-modal-overlay"></div>
    <div class="pdf-modal-content">
      <button class="pdf-modal-close" aria-label="Close preview">
        <i class="ti ti-x"></i>
      </button>
      <iframe id="pdfViewer" class="pdf-viewer"></iframe>
    </div>
  </div>

  <!-- ============================================
       JAVASCRIPT
  ============================================ -->
  <script>
    // PDF Preview Modal
    document.addEventListener('DOMContentLoaded', function() {
      const previewButtons = document.querySelectorAll('.btn-preview');
      const modal = document.getElementById('pdfModal');
      const modalOverlay = modal?.querySelector('.pdf-modal-overlay');
      const closeButton = modal?.querySelector('.pdf-modal-close');
      const pdfViewer = document.getElementById('pdfViewer');

      previewButtons.forEach(button => {
        button.addEventListener('click', function() {
          const pdfFile = this.getAttribute('data-pdf');
          if (pdfViewer && modal) {
            pdfViewer.src = `/downloads/${pdfFile}`;
            modal.classList.add('active');
            document.body.style.overflow = 'hidden';
          }
        });
      });

      // Close modal
      const closeModal = () => {
        if (modal && pdfViewer) {
          modal.classList.remove('active');
          pdfViewer.src = '';
          document.body.style.overflow = '';
        }
      };

      closeButton?.addEventListener('click', closeModal);
      modalOverlay?.addEventListener('click', closeModal);

      // Close on Escape key
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && modal?.classList.contains('active')) {
          closeModal();
        }
      });
    });

    // Smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });
  </script>

</body>
</html>