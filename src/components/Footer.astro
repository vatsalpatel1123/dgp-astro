<style>
  /* ============================================
     FOOTER STYLES
  ============================================ */

  .footer {
    background: var(--dark-slate-blue);
    color: var(--white);
    padding: 80px 24px 24px;
  }

  .footer-wrapper {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 80px;
  }

  .footer-left-contain {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .addicon {
    text-decoration: none;
  }

  .remedo-logo {
    width: 200px;
    height: auto;
  }

  .footer-heading {
    font-size: 15px;
    line-height: 1.8;
    color: rgba(255, 255, 255, 0.85);
    text-decoration: none;
  }

  .footer-heading:hover {
    color: var(--natural);
  }

  .footer-heading-copy {
    font-size: 15px;
    line-height: 1.8;
    color: rgba(255, 255, 255, 0.85);
  }

  .social-links-contain {
    display: flex;
    gap: 16px;
    margin-top: 16px;
  }

  .social-link {
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .social-link:hover {
    background: var(--natural);
    transform: translateY(-3px);
  }

  .social-link-image {
    width: 20px;
    height: 20px;
    filter: brightness(0) invert(1);
  }

  .social-link:hover .social-link-image {
    filter: brightness(0);
  }

  .map-link {
    color: rgba(255, 255, 255, 0.85);
    text-decoration: none;
    font-size: 15px;
    transition: color 0.3s ease;
  }

  .map-link:hover {
    color: var(--natural);
  }

  .hipaa-logo {
    width: 120px;
    height: auto;
    margin-top: 16px;
  }

  .footer-right-contain {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 40px;
  }

  .footer_link-coloumn {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .footer-coloumn-title {
    font-size: 16px;
    font-weight: 700;
    color: var(--natural);
    margin-bottom: 8px;
  }

  .footer-link-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .footer-link-2 {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    font-size: 14px;
    transition: all 0.3s ease;
    display: inline-block;
  }

  .footer-link-2:hover {
    color: var(--natural);
    padding-left: 8px;
  }

  .footer-last-text {
    max-width: 1400px;
    margin: 60px auto 0;
    padding-top: 32px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    text-align: center;
  }

  .copyright-text-2 {
    font-size: 14px;
    color: rgba(255, 255, 255, 0.7);
  }

  /* ============================================
     RESPONSIVE DESIGN
  ============================================ */

  @media (max-width: 991px) {
    .footer-wrapper {
      grid-template-columns: 1fr;
      gap: 60px;
    }

    .footer-right-contain {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 767px) {
    .footer-right-contain {
      grid-template-columns: 1fr;
    }
  }
</style>

